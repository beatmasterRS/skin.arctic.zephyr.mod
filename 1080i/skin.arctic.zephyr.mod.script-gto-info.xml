<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">9000</defaultcontrol>
    <controls>
        <control type="group">
            <animation type="Conditional" reversible="true" condition="Window.IsVisible(FileBrowser.xml) | Window.IsVisible(DialogConfirm.xml) | Window.IsVisible(DialogSelect.xml) | Window.IsVisible(DialogContextMenu.xml) | Window.IsVisible(DialogButtonMenu.xml)">
                <effect type="zoom" end="95" start="100" time="200" center="auto" tween="quadratic" easing="in"/>
            </animation>

            <!-- Poster-->
            <control type="group">
                <visible>!Window.IsVisible(script-script.extendedinfo-DialogVideoInfo.xml)</visible>
                <visible>!Window.IsVisible(script-script.extendedinfo-DialogInfo.xml)</visible>
                <animation effect="slide" start="-1920" end="0" delay="0" time="300" tween="quadratic" easing="out">WindowOpen</animation>
                <animation effect="slide" start="0" end="-1920" time="300" tween="quadratic" easing="in">WindowClose</animation>
                <animation effect="slide" start="-1920" end="0" delay="0" time="300" tween="quadratic" easing="out">Visible</animation>
                <animation effect="slide" start="0" end="-1920" time="300" tween="quadratic" easing="in">Hidden</animation>
                <control type="group" description="Poster">
                    <left>SidePad</left>
                    <top>PosterPad</top>
                    <control type="image">
                        <centertop>PosterH</centertop>
                        <width>PosterH</width>
                        <height>48</height>
                        <aspectratio>stretch</aspectratio>
                        <texture>diffuse/shadowspot.png</texture>
                    </control>
                    <control type="image">
                        <left>-24</left>
                        <top>-24</top>
                        <width>PosterShadowH</width>
                        <height>PosterShadowH</height>
                        <texture border="32">common/$VAR[shadow-24]</texture>
                    </control>
                    <control type="image">
                        <left>-1</left>
                        <top>-1</top>
                        <height>642</height>
                        <width>642</width>
                        <texture colordiffuse="Box2" background="true">common/box2.png</texture>
                        <visible>!Skin.HasSetting(thumbnails.white)</visible>
                    </control>
                    <control type="image">
                        <width>PosterH</width>
                        <height>PosterH</height>
                        <texture border="5" colordiffuse="FF181818">common/box.png</texture>
                    </control>
                    <control type="image">
                        <width>PosterH</width>
                        <height>PosterH</height>
                        <fadetime>100</fadetime>
                        <aspectratio align="center" aligny="center" scalediffuse="false">keep</aspectratio>
                        <texture diffuse="diffuse/listposter.png" background="true">$INFO[Window(Home).Property(GTO.Info.Picture)]</texture>
                    </control>
                </control>
            </control>

            <!-- Main -->
            <control type="group">
                <visible>!Window.IsVisible(script-script.extendedinfo-DialogVideoInfo.xml)</visible>
                <visible>!Window.IsVisible(script-script.extendedinfo-DialogInfo.xml)</visible>
                <animation effect="slide" start="1920" end="0" delay="0" time="300" tween="quadratic" easing="out">WindowOpen</animation>
                <animation effect="slide" start="0" end="1920" time="300" tween="quadratic" easing="in">WindowClose</animation>
                <animation effect="slide" start="1920" end="0" delay="0" time="300" tween="quadratic" easing="out">Visible</animation>
                <animation effect="slide" start="0" end="1920" time="300" tween="quadratic" easing="in">Hidden</animation>

                <!-- Control Buttons -->
                <control type="group">
                    <bottom>-80</bottom>
                    <include>Animation.VideoFadeOut</include>
                    <include>DialogGTOInfoNavigationWIP</include>
                </control>
                <control type="group">
                    <include>Animation.VideoFadeOut</include>
                    <top>90</top>
                    <left>780</left>
                    <width>1250</width>
                    <control type="label">
                        <font>LargeNew</font>
                        <description>Header Label</description>
                        <textcolor>Dark1</textcolor>
                        <label>$INFO[Window(Home).Property(GTO.Info.Title)]</label>
                    </control>
                    <control type="label">
                        <top>55</top>
                        <height>36</height>
                        <font>Tiny</font>
                        <textcolor>Dark1</textcolor>
                        <label fallback="19055">$INFO[Window(Home).Property(GTO.Info.Channel)]</label>
                        <aligny>center</aligny>
                    </control>
                </control>

                <!-- Info -->
                <control type="group">
                    <left>ListSquareX</left>
                    <right>SidePad</right>
                    <bottom>224</bottom>
                    <top>PosterPad</top>
                    <control type="grouplist">
                        <left>30</left>
                        <right>0</right>
                        <itemgap>0</itemgap>
                        <control type="group">
                            <height>36</height>
                            <control type="label">
                                <width>150</width>
                                <height>36</height>
                                <font>Tiny</font>
                                <textcolor>Dark1</textcolor>
                                <label>[B]$LOCALIZE[2050][/B]</label>
                                <aligny>center</aligny>
                            </control>
                            <control type="label">
                                <left>150</left>
                                <width>100%</width>
                                <height>36</height>
                                <font>Tiny</font>
                                <textcolor>Dark2</textcolor>
                                <label fallback="19055">$INFO[Window(Home).Property(GTO.Info.RunTime)] min</label>
                                <aligny>center</aligny>
                            </control>
                        </control>
                        <control type="group">
                            <height>36</height>
                            <control type="label">
                                <width>150</width>
                                <height>36</height>
                                <font>Tiny</font>
                                <textcolor>Dark1</textcolor>
                                <label>[B]$LOCALIZE[19126][/B]</label>
                                <aligny>center</aligny>
                            </control>
                            <control type="label">
                                <left>150</left>
                                <width>100%</width>
                                <height>36</height>
                                <font>Tiny</font>
                                <textcolor>Dark2</textcolor>
                                <label fallback="19055">$INFO[Window(Home).Property(GTO.Info.Date)]</label>
                                <aligny>center</aligny>
                            </control>
                        </control>
                        <control type="group">
                            <height>36</height>
                            <control type="label">
                                <width>150</width>
                                <height>36</height>
                                <font>Tiny</font>
                                <textcolor>Dark1</textcolor>
                                <label>[B]$LOCALIZE[19127][/B]</label>
                                <aligny>center</aligny>
                            </control>
                            <control type="label">
                                <left>150</left>
                                <width>100%</width>
                                <height>36</height>
                                <font>Tiny</font>
                                <textcolor>Dark2</textcolor>
                                <label fallback="19055">$INFO[Window(Home).Property(GTO.Info.EndTime)]</label>
                                <aligny>center</aligny>
                            </control>
                        </control>
                        <control type="group">
                            <height>36</height>
                            <control type="label">
                                <width>150</width>
                                <height>36</height>
                                <font>Tiny</font>
                                <textcolor>Dark1</textcolor>
                                <label>[B]$LOCALIZE[515][/B]</label>
                                <aligny>center</aligny>
                            </control>
                            <control type="label">
                                <left>150</left>
                                <width>100%</width>
                                <height>36</height>
                                <font>Tiny</font>
                                <textcolor>Dark2</textcolor>
                                <label fallback="19055">$INFO[Window(Home).Property(GTO.Info.Genre)]</label>
                                <aligny>center</aligny>
                            </control>
                        </control>
                        <control type="group">
                            <height>38</height>
                        </control>
                        <control type="group">
                            <height>auto</height>
                            <width>100%</width>
                            <control type="textbox">
                                <left>0</left>
                                <right>0</right>
                                <height>425</height>
                                <font>Tiny</font>
                                <textcolor>Dark2</textcolor>
                                <scroll>false</scroll>
                                <align>left</align>
                                <label>$INFO[Window(Home).Property(GTO.Info.Description)] [CR][CR]$INFO[Window(Home).Property(GTO.Info.Cast),$LOCALIZE[206]: ,]</label>
                                <aligny>top</aligny>
                            </control>
                        </control>
                    </control>
                </control>
                <control type="label">
                    <right>83</right>
                    <bottom>100</bottom>
                    <height>50</height>
                    <font>Mini</font>
                    <scroll>false</scroll>
                    <textcolor>Dark3</textcolor>
                    <label>$VAR[DialogInfoLabel]</label>
                    <aligny>center</aligny>
                    <align>right</align>
                    <visible>ControlGroup(9000).HasFocus()</visible>
                    <include>Animation.FadeIn</include>
                    <include>Animation.FadeOut</include>
                </control>
            </control>
        </control>
    </controls>
</window>
<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>

    <include name="520Content">
        <oninfo condition="ListItem.IsCollection">ActivateWindow(1132)</oninfo>
        <visible>Container.Content(seasons) | Container.Content(episodes)</visible>
        <include content="forced_view" condition="Skin.HasSetting(enable.forcedviews)">
            <param name="string" value="$LOCALIZE[37590] $LOCALIZE[20360]" />
        </include>
        <top>550</top>
        <left>-659</left>
        <width>2580</width>
        <height>395</height>
        <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
        <ondown>1658</ondown>
        <orientation>horizontal</orientation>
        <preloaditems>2</preloaditems>
        <pagecontrol>1658</pagecontrol>
        <focusposition>2</focusposition>
        <viewtype label="$LOCALIZE[37590] $LOCALIZE[20360]">list</viewtype>
        <scrolltime tween="quadratic">400</scrolltime>
        <itemlayout height="327" width="465">
            <control type="image">
                <left>-1</left>
                <top>-5</top>
                <right>-7</right>
                <bottom>49</bottom>
                <texture border="10">common/$VAR[nofocus-shadow10]</texture>
            </control>
            <control type="image">
                <left>10</left>
                <top>5</top>
                <width>450</width>
                <height>262</height>
                <bottom>80</bottom>
                <texture colordiffuse="Fallback" border="4" background="true">common/box.png</texture>
            </control> 
            <control type="image">
                <left>9</left>
                <top>4</top>
                <right>4</right>
                <bottom>59</bottom>
                <texture colordiffuse="Box2" border="4" background="true">common/box21.png</texture>
                <visible>!Skin.HasSetting(thumbnails.white)</visible>
            </control>
            <control type="image">
                <left>10</left>
                <top>5</top>
                <width>450</width>
                <height>262</height>
                <bottom>80</bottom>
                <aspectratio scalediffuse="false">scale</aspectratio>
                <texture diffuse="diffuse/wall.png" background="true">$VAR[FanartImage]</texture>
            </control>
            <control type="label">
                <align>center</align>
                <aligny>center</aligny>
                <width>50</width>
                <right>5</right>
                <top>0</top>
                <height>50</height>
                <textcolor>$VAR[WatchedLabelPosterColor]</textcolor>
                <font>SymbolPoster</font>
                <label>$VAR[WatchedLabelPoster]</label>
                <visible>!String.IsEqual(ListItem.Label,..)</visible>
            </control>
            <control type="label">
                <top>265</top>
                <width>320</width>
                <height>50</height>
                <left>20</left>
                <font>Small333</font>
                <textcolor>Dark1</textcolor>
                <visible>!String.IsEqual(ListItem.Label,..)</visible>
                <label>$INFO[ListItem.Label]</label>
            </control>
        </itemlayout>
        <focusedlayout height="327" width="465">
            <control type="group">
                <animation center="370,168" easing="inout" effect="zoom" end="120" start="100" time="300" tween="sine">Focus</animation>
                <animation center="370,168" easing="inout" effect="zoom" end="100" start="120" time="300" tween="sine">UnFocus</animation>
                <control type="image">
                    <left>-1</left>
                    <top>-5</top>
                    <right>-7</right>
                    <bottom>48</bottom>
                    <texture border="10">common/$VAR[nofocus-shadow10]</texture>
                </control>
                <control type="image">
                    <left>10</left>
                    <top>5</top>
                    <width>450</width>
                    <height>262</height>
                    <bottom>80</bottom>
                    <texture colordiffuse="Fallback" border="4" background="true">common/box.png</texture>
                </control>
                <control type="image">
                    <left>9</left>
                    <top>4</top>
                    <right>4</right>
                    <bottom>59</bottom>
                    <texture colordiffuse="Box2" border="4" background="true">common/box21.png</texture>
                    <visible>!Skin.HasSetting(thumbnails.white)</visible>
                </control>
                <control type="image">
                    <right>-48</right>
                    <top>2</top>
                    <width>505.33</width>
                    <bottom>28</bottom>
                    <texture colordiffuse="$VAR[ColorSquares]" border="20">common/selectbox.png</texture>
                    <animation effect="zoom" end="90" start="100" time="0" condition="true">Conditional</animation>
                    <animation center="auto" condition="Control.HasFocus(520)" effect="fade" end="100" start="0" time="250">Focus</animation>
                    <animation center="auto" condition="Control.HasFocus(520)" effect="fade" end="0" start="100" time="50">UnFocus</animation>
                </control>
                <control type="image">
                    <right>-48</right>
                    <top>2</top>
                    <width>505.33</width>
                    <bottom>28</bottom>
                    <texture colordiffuse="$VAR[ColorHighlightSelectbox2]" border="20">common/gradient-selectbox.png</texture>
                    <animation effect="zoom" end="90" start="100" time="0" condition="true">Conditional</animation>
                    <animation center="auto" condition="Control.HasFocus(520)" effect="fade" end="100" start="0" time="250">Focus</animation>
                    <animation center="auto" condition="Control.HasFocus(520)" effect="fade" end="0" start="100" time="50">UnFocus</animation>
                </control>
                <control type="image">
                    <left>10</left>
                    <top>5</top>
                    <width>450</width>
                    <height>262</height>
                    <bottom>80</bottom>
                    <aspectratio scalediffuse="false">scale</aspectratio>
                    <texture diffuse="diffuse/wall.png" background="true">$VAR[FanartImage]</texture>
                </control>
                <control type="label">
                    <align>center</align>
                    <aligny>center</aligny>
                    <width>50</width>
                    <right>5</right>
                    <top>0</top>
                    <height>50</height>
                    <textcolor>$VAR[WatchedLabelPosterColor]</textcolor>
                    <font>SymbolPoster</font>
                    <label>$VAR[WatchedLabelPoster]</label>
                    <visible>!String.IsEqual(ListItem.Label,..)</visible>
                </control>
            </control>
            <control type="label">
                <top>270</top>
                <width>530</width>
                <height>50</height>
                <left>20</left>
                <font>Small333</font>
                <textcolor>Dark1</textcolor>
                <visible>!String.IsEqual(ListItem.Label,..)</visible>
                <label>$INFO[ListItem.Label]</label>
                <animation type="Focus">
                    <effect type="slide" start="0,-5" end="-70,20" time="250" tween="sine" center="auto"/>
                </animation>
                <animation type="UnFocus">
                    <effect type="slide" start="-70,20" end="0,-5" time="250" tween="sine" center="auto"/>
                </animation>
            </control>
        </focusedlayout>
    </include>

    <include name="520Wrap">
        <control type="wraplist" id="520">
            <include>520Content</include>
        </control>
    </include>

    <include name="520Fixed">
        <control type="fixedlist" id="520">
            <include>520Content</include>
        </control>
    </include>

    <include name="View_520_Minimal">
        <description>List View (id=520)</description>
        <control type="group">
            <include>Animation.Common</include>
            <!--<include>JumpBarHorizontal</include>-->
            <!--<include>ViewSlideForJumpBar</include>-->
            <visible>Control.IsVisible(520)</visible>
            <control type="group">
                <left>210</left>
                <top>40</top>
                <width>520</width>
                <control type="image" description="clearlogo">
                    <visible>Skin.HasSetting(ShowClearart510) + !String.IsEmpty(ListItem.Art(clearlogo))</visible>
                    <top>-670</top>
                    <width>275</width>
                    <aspectratio scalediffuse="true" align="left">keep</aspectratio>
                    <texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
                    <include>Animation.ViHi</include>
                    <fadetime>100</fadetime>
                </control>
                <control type="label">
                    <visible>!Skin.HasSetting(ShowClearart510) | [Skin.HasSetting(ShowClearart510) + String.IsEmpty(ListItem.Art(clearlogo))]</visible>
                    <top>180</top>
                    <description>Header Label</description>
                    <textcolor>Dark1</textcolor>
                    <font>SmallBold</font>
                    <label fallback="19055">$INFO[ListItem.Title]</label>
                    <include>Animation.ViHi</include>
                </control>
                <control type="label">
                    <visible>!String.IsEqual(ListItem.Label,..)</visible>
                    <top>236</top>
                    <height>36</height>
                    <font>Tiny</font>
                    <textcolor>Dark1</textcolor>
                    <label>$VAR[509_Row_3]</label>
                </control>
                <control type="textbox">
                    <top>300</top>
                    <bottom>17</bottom>
                    <font>Tiny</font>
                    <height>144</height>
                    <textcolor>Dark2</textcolor>
                    <selectedcolor>Dark2</selectedcolor>
                    <label>$INFO[ListItem.Plot]</label>
                </control>
                <control type="label">
                    <top>195</top>
                    <left>-130</left>
                    <description>Header Label</description>
                    <textcolor>Dark2</textcolor>
                    <font>HomeFO</font>
                    <label>$INFO[ListItem.Year]</label>
                </control>
                <control type="label">
                    <top>265</top>
                    <left>-130</left>
                    <width>100</width>
                    <align>center</align>
                    <description>Header Label</description>
                    <textcolor>Dark3</textcolor>
                    <font>Small</font>
                    <label>$INFO[ListItem.Duration(mins)]</label>
                </control>
            </control>
            <control type="scrollbar" id="1658">
                <bottom>200</bottom>
                <include content="scrollbar_hor">
                    <param name="scrollid" value="1658"/>
                </include>
            </control>
            <include condition="!Skin.HasSetting(53poster.nowrap)">520Wrap</include>
            <include condition="Skin.HasSetting(53poster.nowrap)">520Fixed</include>
        </control>
    </include>
</includes>

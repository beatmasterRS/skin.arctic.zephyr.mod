<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="12">
    <defaultcontrol always="true">3</defaultcontrol>
    <onload condition="Skin.HasSetting(lock.skinsettings)">RunScript(script.embuary.helper,action=getkodisetting,setting=lookandfeel.skincolors)</onload>
    <onload condition="Skin.HasSetting(lock.skinsettings)">Skin.SetString(skincolors,$INFO[Window(home).property(lookandfeel.skincolors)])</onload>
    <onload condition="Skin.HasSetting(lock.skinsettings)">RunScript(script.embuary.helper,action=getkodisetting,setting=lookandfeel.skintheme)</onload>
    <onload condition="Skin.HasSetting(lock.skinsettings)">Skin.SetString(skintheme,$INFO[Window(home).property(lookandfeel.skintheme)])</onload>
    <onload condition="Skin.HasSetting(lock.skinsettings)">RunScript(script.embuary.helper,action=getkodisetting,setting=lookandfeel.font)</onload>
    <onload condition="Skin.HasSetting(lock.skinsettings)">Skin.SetString(skinfont,$INFO[Window(home).property(lookandfeel.font)])</onload>
    <controls>
        <include>GlobalBackground</include>
        <include>Furniture_Clock</include>
        <include>Furniture_Header</include>
        <include>Furniture_NowPlaying</include>
        <include>Furniture_Weather</include>
        <control type="group">
            <include>Animation.Common</include>
            <left>72</left>
            <right>72</right>
            <top>208</top>
            <height>656</height>
            <control type="image">
                <width>100%</width>
                <height>100%</height>
                <texture border="16" colordiffuse="Panel">common/rounded-shadow8.png</texture>
            </control>
            <include content="Def_Gradient_Settings_Image">
                <param name="controlid" value="5"/>
                <param name="left" value="458"/>
                <param name="top" value="148"/>
                <param name="overlayfix" value="true"/>
            </include>
            <include content="Def_Gradient_Settings_Image">
                <param name="controlid" value="3"/>
                <param name="left" value="8"/>
                <param name="top" value="148"/>
                <param name="width" value="450"/>
                <param name="overlayfix" value="true"/>
            </include>
            <control type="group">
                <left>8</left>
                <right>8</right>
                <top>8</top>
                <bottom>8</bottom>

                <!-- Right Group -->
                <control type="grouplist" id="5">
                    <scrolltime>0</scrolltime>
                    <description>Control Area</description>
                    <left>500</left>
                    <right>0</right>
                    <top>140</top>
                    <bottom>10</bottom>
                    <itemgap>0</itemgap>
                    <onleft>3</onleft>
                    <onup>5</onup>
                    <ondown>5</ondown>
                    <orientation>vertical</orientation>
                </control>

                <!-- Left Group -->
                <control type="grouplist" id="3">
                    <description>Button Area</description>
                    <width>450</width>
                    <top>140</top>
                    <bottom>10</bottom>
                    <itemgap>0</itemgap>
                    <onright>5</onright>
                    <onup>20</onup>
                    <ondown>3</ondown>
                    <orientation>vertical</orientation>
                </control>

                <!-- Lines -->
                <control type="image">
                    <top>10</top>
                    <left>450</left>
                    <width>1</width>
                    <bottom>10</bottom>
                    <colordiffuse>PanelWhite12</colordiffuse>
                    <texture>common/white.png</texture>
                </control>

                <!-- Header -->
                <control type="label">
                    <left>30</left>
                    <width>390</width>
                    <posy>18</posy>
                    <font>MediumBold</font>
                    <label>5</label>
                    <textcolor>PanelWhite100</textcolor>
                </control>
                <control type="button" id="20">
                    <left>30</left>
                    <right>30</right>
                    <posy>77</posy>
                    <height>30</height>
                    <font>Tiny</font>
                    <textcolor>PanelWhite70</textcolor>
                    <align>left</align>
                    <textoffsetx>0</textoffsetx>
                    <texturenofocus />
                    <texturefocus />
                    <focusedcolor>Highlight2</focusedcolor>
                    <ondown>3</ondown>
                    <onright>5</onright>
                    <onup>3</onup>
                    <onclick>SettingsLevelChange</onclick>
                </control>
                <control type="label">
                    <left>480</left>
                    <width>390</width>
                    <posy>18</posy>
                    <font>MediumBold</font>
                    <label>$VAR[Label_SettingsHeader]</label>
                    <textcolor>PanelWhite100</textcolor>
                </control>
                <control type="label" id="6">
                    <left>480</left>
                    <right>30</right>
                    <posy>77</posy>
                    <height>30</height>
                    <font>Tiny</font>
                    <textcolor>PanelWhite70</textcolor>
                    <scroll>true</scroll>
                </control>
                <control type="image">
                    <left>480</left>
                    <right>30</right>
                    <top>135</top>
                    <height>1</height>
                    <colordiffuse>PanelWhite12</colordiffuse>
                    <texture>common/white.png</texture>
                </control>

<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1190">
    <visible>$EXP[ExtendedNowPlayingHelperAutoClose] | $EXP[ExtendedNowPlayingHelperAutoShow]</visible>
    
    <!-- Close Now Playing -->
    <onload condition="$EXP[ExtendedNowPlayingHelperAutoClose] + !$EXP[ExtendedNowPlayingHelperAutoShow]">Dialog.Close(all,true)</onload>
    <onload condition="$EXP[ExtendedNowPlayingHelperAutoClose] + !$EXP[ExtendedNowPlayingHelperAutoShow]">SetFocus(300)</onload>
    <onload condition="$EXP[ExtendedNowPlayingHelperAutoClose] + !$EXP[ExtendedNowPlayingHelperAutoShow]">ClearProperty(controlsvisible,home)</onload>
    
    <!-- Show Now Playing -->
    <onload condition="$EXP[ExtendedNowPlayingHelperAutoShow] + !$EXP[ExtendedNowPlayingHelperAutoClose] + !$EXP[HasHomemenuAutoSlideOutAnimation]">SetFocus(300)</onload>
    <onload condition="$EXP[ExtendedNowPlayingHelperAutoShow] + !$EXP[ExtendedNowPlayingHelperAutoClose] + $EXP[HasHomemenuAutoSlideOutAnimation]">SetFocus(2011)</onload>
    <onload condition="$EXP[ExtendedNowPlayingHelperAutoShow] + !$EXP[ExtendedNowPlayingHelperAutoClose]">ClearProperty(nowplayingautoshowtimer,home)</onload>
    
    <controls />
</window>
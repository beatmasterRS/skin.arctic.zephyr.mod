<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3012</defaultcontrol>
    <zorder>20</zorder>
    <controls>
        <control type="label" id="4000">
            <visible>false</visible>
        </control>
        <control type="group">
            <right>64</right>
            <bottom>64</bottom>
            <width>480</width>
            <height>270</height>
            <include>Animation.FadeIn.Slide</include>
            <include>Animation.FadeOut</include>
            <control type="image">
                <left>-1</left>
                <top>-1</top>
                <height>272</height>
                <width>482</width>
                <texture colordiffuse="Box2" background="true">common/box2.png</texture>
                <visible>!Skin.HasSetting(thumbnails.white)</visible>
            </control>
            <control type="label" description="text">
                <top>-64</top>
                <left>0</left>
                <right>20</right>
                <height>64</height>
                <aligny>center</aligny>
                <font>Small</font>
                <label>[CAPITALIZE]$ADDON[service.upnext 30024][/CAPITALIZE]</label>
                <textcolor>ffededed</textcolor>
                <shadowcolor>bf000000</shadowcolor>
            </control>
            <control type="image" description="fanart">
                <width>100%</width>
                <height>100%</height>
                <fadetime>350</fadetime>
                <aspectratio scalediffuse="false">scale</aspectratio>
                <texture>$INFO[Player.Art(fanart)]</texture>
            </control>
            <control type="image" description="blackline">
                <width>100%</width>
                <height>64</height>
                <bottom>0</bottom>
                <aspectratio scalediffuse="false">scale</aspectratio>
                <texture colordiffuse="df000000">common/white.png</texture>
            </control>
            <control type="image" description="blackline">
                <height>64</height>
                <width>64</width>
                <centertop>133</centertop>
                <centerleft>50%</centerleft>
                <aspectratio scalediffuse="false">keep</aspectratio>
                <texture colordiffuse="dfffffff">common/circle.png</texture>
            </control>
            <control type="label">
                <description>Remaining</description>
                <centertop>132</centertop>
                <centerleft>50%</centerleft>
                <width>885</width>
                <font>TinyBold</font>
                <align>center</align>
                <textcolor>ffededed</textcolor>
                <label>$INFO[Player.TimeRemaining(ss)]</label>
            </control>
            <control type="label" description="text">
                <left>20</left>
                <right>120</right>
                <height>64</height>
                <bottom>2</bottom>
                <aligny>center</aligny>
                <font>Small</font>
                <label>$INFO[Window.Property(season),S,]$INFO[Window.Property(episode),E, - ]$INFO[Window.Property(title)]</label>
                <textcolor>PanelWhite100</textcolor>
            </control>
            <control type="button" id="3012">
                <description>Play</description>
                <right>64</right>
                <bottom>8</bottom>
                <width>48</width>
                <height>48</height>
                <label/>
                <align>center</align>
                <aligny>center</aligny>
                <textoffsetx>0</textoffsetx>
                <onleft>3013</onleft>
                <onright>3013</onright>
                <font>Null</font>
                <textcolor>PanelWhite30</textcolor>
                <focusedcolor>PanelWhite100</focusedcolor>
                <texturefocus colordiffuse="$VAR[ColorHighlight]" border="5">common/box.png</texturefocus>
                <texturenofocus colordiffuse="B3000000" border="5">common/box.png</texturenofocus>
            </control>
            <control type="image">
                <description>Play</description>
                <right>72</right>
                <bottom>16</bottom>
                <width>32</width>
                <height>32</height>
                <texture>indicator/playwhite.png</texture>
                <aspectratio>keep</aspectratio>
                <animation effect="fade" start="100" end="50" time="0" condition="!Control.HasFocus(4012)">Conditional</animation>
            </control>
            <control type="button" id="3013">
                <description>Cancel</description>
                <right>8</right>
                <bottom>8</bottom>
                <width>48</width>
                <height>48</height>
                <label/>
                <align>center</align>
                <aligny>center</aligny>
                <textoffsetx>0</textoffsetx>
                <onleft>3012</onleft>
                <onright>3012</onright>
                <font>Null</font>
                <textcolor>PanelWhite30</textcolor>
                <focusedcolor>PanelWhite100</focusedcolor>
                <texturefocus colordiffuse="$VAR[ColorHighlight]" border="5">common/box.png</texturefocus>
                <texturenofocus colordiffuse="B3000000" border="5">common/box.png</texturenofocus>
            </control>
            <control type="image">
                <description>Play</description>
                <right>16</right>
                <bottom>16</bottom>
                <width>32</width>
                <height>32</height>
                <texture>indicator/close.png</texture>
                <aspectratio>keep</aspectratio>
                <animation effect="fade" start="100" end="50" time="0" condition="!Control.HasFocus(3013)">Conditional</animation>
            </control>
        </control>
    </controls>
</window>
<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="145">
    <defaultcontrol always="true">11</defaultcontrol>
    <zorder>5</zorder>
    <controls>
        <control type="group">
            <include>Animation.FadeIn.Slide</include>
            <include>Animation.FadeOut</include>
            <centerleft>50%</centerleft>
            <posy>-20</posy>
            <width>880</width>
            <height>202</height>
            <control type="image">
                <left>-8</left>
                <right>-8</right>
                <top>-8</top>
                <bottom>-8</bottom>
                <colordiffuse>$VAR[OSDPanel]</colordiffuse>
                <animation effect="fade" start="100" end="90" condition="true">Conditional</animation>
                <texture border="16">common/rounded-shadow8.png</texture>
            </control>
            <control type="group">
                <left>15</left>
                <top>30</top>
                <control type="label" id="10">
                    <description>Header Label</description>
                    <left>70</left>
                    <width>1000</width>
                    <posy>0</posy>
                    <include>FontTop</include>
                    <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                </control>
                <include>Kodi_Logo</include>
                <!-- Lines -->
                <control type="image">
                    <top>70</top>
                    <left>15</left>
                    <width>820</width>
                    <height>1</height>
                    <bottom>10</bottom>
                    <colordiffuse>Black12</colordiffuse>
                    <texture>common/white.png</texture>
                </control>
            </control>
            <control type="label" id="12">
                <description>Label</description>
                <top>30</top>
                <left>30</left>
                <right>30</right>
                <font>SmallBold</font>
                <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                <align>right</align>
            </control>
            <control type="slider" id="11">
                <description>Slider</description>
                <posy>140</posy>
                <left>30</left>
                <width>820</width>
                <onleft>11</onleft>
                <onright>11</onright>
            </control>
        </control>
    </controls>
</window>

<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1188">
    <visible>!String.IsEmpty(Window(home).Property(letsfocus))</visible>

    <!-- Auto Focus Controls -->
    <onload>ClearProperty(letsfocus,home)</onload>
    <onunload condition="!Skin.HasSetting(hide.home.nowplaying.controls)">SetFocus(777)</onunload>
    <onunload condition="Skin.HasSetting(hide.home.nowplaying.controls) + !$EXP[HasHomemenuAutoSlideOutAnimation]">SetFocus(300)</onunload>
    <onunload condition="Skin.HasSetting(hide.home.nowplaying.controls) + [$EXP[HasHomemenuAutoSlideOutAnimation] | $EXP[HasHomemenuAutoSlideOutAnimationOnlyIfWidgetIsFocused]]">SetFocus(2011)</onunload>
    <animation effect="fade" start="100" end="0" time="350" condition="!Skin.HasSetting(hide.home.nowplaying.controls)">WindowClose</animation>
    
    <controls />
</window>
<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <defaultcontrol always="true">9902</defaultcontrol>
    <onload>SetProperty(TMDbHelper.ServicePause,1)</onload>
    <controls>
        <control type="group">
            <animation effect="fade" start="0" end="100" time="350" delay="100" tween="cubic" easing="inout">WindowOpen</animation>
            
            <!-- Title of the Wikipedia article -->
            <control type="label" id="9901">
                <font>Flag</font>
                <width>auto</width>
                <textcolor>Dark2</textcolor>
                <visible>false</visible>
            </control>

            <control type="group">
                <left>SidePad</left>
                <top>216</top>
                <right>SidePad</right>
                <height>890</height>
                <control type="list" id="9902">
                    <height>576</height>
                    <width>428</width>
                    <onright>61</onright>
                    <onup>9902</onup>
                    <ondown>9902</ondown>
                    <focusposition>2</focusposition>
                    <onleft>Back</onleft>
                    <onfocus>SetProperty(title,$INFO[Control.GetLabel(9901)],home)</onfocus>
                    <viewtype label="535">list</viewtype>
                    <include>ScrolltimeViewsList</include>
                    <itemlayout width="450" height="64">
                        <control type="label">
                            <posx>30</posx>
                            <width>400</width>
                            <aligny>center</aligny>
                            <height>64</height>
                            <font>SmallNavi</font>
                            <label>$INFO[ListItem.Label]</label>
                            <textcolor>Dark1</textcolor>
                            <selectedcolor>Dark1</selectedcolor>
                        </control>
                    </itemlayout>
                    <focusedlayout width="450" height="64">
                        <control type="image">
                            <width>450</width>
                            <height>64</height>
                            <texture border="5" colordiffuse="$VAR[ColorSelectOtherBar]">common/white.png</texture>
                        </control>
                        <control type="image">
                            <width>450</width>
                            <height>64</height>
                            <texture border="5" colordiffuse="$VAR[ColorHighlightOtherBar]">common/gradient-box-wide-cut.png</texture>
                        </control>
                        <control type="label">
                            <posx>30</posx>
                            <width>400</width>
                            <aligny>center</aligny>
                            <height>64</height>
                            <font>SmallNavi</font>
                            <label>$INFO[ListItem.Label]</label>
                            <textcolor>Selected</textcolor>
                            <selectedcolor>Selected</selectedcolor>
                        </control>
                    </focusedlayout>
                </control>
    
                <!-- Right Group -->
                <control type="group">
                    <left>490</left>
                    <height>610</height>
                    <control type="group">

                        <!-- Textbox with the text of the section focused in 9902 -->
                        <control type="textbox" id="9903">
                            <height>610</height>
                            <align>left</align>
                            <textcolor>Dark2</textcolor>
                            <font>Tiny</font>
                            <pagecontrol>61</pagecontrol>
                            <autoscroll>false</autoscroll>
                            <right>400</right>
                        </control>
                        
                        <control type="scrollbar" id="61">
                            <onback>9902</onback>
                            <right>0</right>
                            <height>610</height>
                            <width>8</width>
                            <onup>9902</onup>
                            <ondown>9902</ondown>
                            <onleft>9902</onleft>
                            <onright>9902</onright>
                            <texturesliderbackground border="4" colordiffuse="Dark4">scrollbar/scrollv.png</texturesliderbackground>
                            <texturesliderbar border="4" colordiffuse="Dark3">scrollbar/scrollv.png</texturesliderbar>
                            <texturesliderbarfocus border="4" colordiffuse="Dark2">scrollbar/scrollv.png</texturesliderbarfocus>
                            <orientation>vertical</orientation>
                            <showonepage>false</showonepage>
                            <animation effect="fade" start="100" end="0" time="400" condition="!Control.HasFocus(61) + !Container.Scrolling">Conditional</animation>
                        </control>

                        <!-- Image on right -->
                        <control type="group">
                            <right>0</right>
                            <width>320</width>
                            <visible>!String.IsEmpty(Window.Property(Image))</visible>
                            <control type="image">
                                <top>80</top>
                                <aspectratio align="center" aligny="top">keep</aspectratio>
                                <texture background="true">$INFO[Window.Property(Image)]</texture>
                                <bottom>260</bottom>
                            </control>
                            <control type="textbox">
                                <align>center</align>
                                <height>120</height>
                                <bottom>0</bottom>
                                <textcolor>Dark2</textcolor>
                                <font>Tiny</font>
                                <label>$INFO[Window.Property(ImageText)]</label>
                            </control>
                        </control>
                    </control>
                </control>

                <control type="grouplist">
                    <right>SidePad</right>
                    <orientation>horizontal</orientation>
                    <align>right</align>
                    <itemgap>0</itemgap>
                    <bottom>0</bottom>
    
                    <!-- Creative commons attribution label -->
                    <control type="image" id="9905">
                        <align>right</align>
                        <width>200</width>
                        <height>42</height>
                        <bottom>-50</bottom>
                        <aspectratio align="right">keep</aspectratio>
                    </control>
    
                    <!-- Creative commons licence logo -->
                    <control type="textbox" id="9904">
                        <align>right</align>
                        <textcolor>Dark2</textcolor>
                        <font>Tiny</font>
                        <bottom>-50</bottom>
                        <height>80</height>
                        <aligny>center</aligny>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>
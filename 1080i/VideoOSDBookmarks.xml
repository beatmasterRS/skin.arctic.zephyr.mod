<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="125">
    <defaultcontrol always="true">2</defaultcontrol>
    

    <controls>
        <include>GlobalOverlay</include>
        <control type="group">
            <height>800</height>
            <width>1120</width>
            <include>DefDialogInfoPanel</include>
            <control type="label">
                <description>Header Label</description>
                <centerleft>50%</centerleft>
                <width>1000</width>
                <align>center</align>
                <posy>15</posy>
                <font>MediumBold</font>
                <label>[UPPERCASE]$LOCALIZE[298][/UPPERCASE] - ($INFO[Container(11).NumItems]) $LOCALIZE[31027] - $LOCALIZE[31028] ($INFO[Container(11).CurrentPage]/$INFO[Container(11).NumPages])</label>
            </control>

            <control type="panel" id="11">
                <centerleft>50%</centerleft>
                <posy>90</posy>
                <width>1080</width>
                <height>600</height>
                <onleft>2</onleft>
                <onright>3</onright>
                <ondown>2</ondown>
                <onup>2</onup>
                <scrolltime>200</scrolltime>
                <viewtype label="536">icon</viewtype>
                <pagecontrol>-</pagecontrol>
                <orientation>horizontal</orientation>

                <itemlayout height="300" width="360">

                    <control type="image">
                        <left>10</left>
                        <right>10</right>
                        <top>10</top>
                        <bottom>60</bottom>
                        <texture border="5" colordiffuse="Black12">common/box.png</texture>
                    </control>

                    <control type="image">
                        <left>20</left>
                        <right>20</right>
                        <top>20</top>
                        <bottom>70</bottom>
                        <aspectratio>scale</aspectratio>
                        <info>ListItem.Icon</info>
                    </control>

                    <control type="label">
                        <centerleft>50%</centerleft>
                        <posy>255</posy>
                        <width>330</width>
                        <height>23</height>
                        <align>center</align>
                        <font>Tiny</font>
                        <label>$INFO[ListItem.Label]$INFO[ListItem.Label2, ,]</label>
                    </control>

                </itemlayout>

                <focusedlayout height="300" width="360">

                    <control type="image">
                        <left>10</left>
                        <right>10</right>
                        <top>10</top>
                        <bottom>60</bottom>
                        <texture border="5" colordiffuse="$VAR[ColorHighlight]">common/box.png</texture>
                    </control>

                    <control type="image">
                        <left>20</left>
                        <right>20</right>
                        <top>20</top>
                        <bottom>70</bottom>
                        <aspectratio>scale</aspectratio>
                        <info>ListItem.Icon</info>
                    </control>

                    <control type="label">
                        <centerleft>50%</centerleft>
                        <posy>255</posy>
                        <width>330</width>
                        <height>23</height>
                        <align>center</align>
                        <font>Tiny</font>
                        <label>$INFO[ListItem.Label]$INFO[ListItem.Label2, ,]</label>
                    </control>

                </focusedlayout>

            </control>

            <control type="grouplist" id="9000">
                <centerleft>50%</centerleft>
                <bottom>30</bottom>
                <width>1080</width>
                <height>66</height>
                <itemgap>30</itemgap>
                <align>center</align>
                <orientation>horizontal</orientation>
                <onleft>9000</onleft>
                <onright>9000</onright>
                <onup>11</onup>
                <ondown>11</ondown>

                <control type="button" id="2">
                    <description>Create Bookmark button</description>
                    <label>294</label>
                    <width>330</width>
                    <texturefocus colordiffuse="$VAR[ColorHighlight]" border="5">common/box.png</texturefocus>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <include>DefDialogButtons</include>
                </control>

                <control type="button" id="3">
                    <description>Clear Bookmark button</description>
                    <label>296</label>
                    <width>330</width>
                    <texturefocus colordiffuse="$VAR[ColorHighlight]" border="5">common/box.png</texturefocus>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <include>DefDialogButtons</include>
                </control>

                <control type="button" id="4">
                    <description>Clear Bookmark button</description>
                    <label>20406</label>
                    <width>330</width>
                    <texturefocus colordiffuse="$VAR[ColorHighlight]" border="5">common/box.png</texturefocus>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <include>DefDialogButtons</include>
                    <visible>videoplayer.content(episodes)</visible>
                </control>

            </control>

        </control>

    </controls>

</window>

<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">401</defaultcontrol>
    <controls>
        <include>GlobalOverlay</include>

        <control type="group">
            <include>Animation.FadeIn.Slide</include>
            <centerleft>50%</centerleft>
            <centertop>50%</centertop>
            <width>1465</width>
            <height>657</height>
            <control type="image">
                <description>background image</description>
                <top>-8</top>
                <bottom>-8</bottom>
                <left>-8</left>
                <right>-8</right>
                <texture border="16" colordiffuse="White100">common/rounded-shadow8.png</texture>
            </control>

            <control type="label" id="500">
                <description>header label</description>
                <posy>10</posy>
                <left>22</left>
                <right>22</right>
                <font>SmallBold</font>
                <align>left</align>
                <textcolor>Black70</textcolor>
            </control>
            
            <!-- Left List: Current Shortcuts -->
            <control type="list" id="211">
                <description>Rules List Control</description>
                <left>15</left>
                <bottom>15</bottom>
                <width>600</width>
                <height>552</height>
                <onup>211</onup>
                <onleft>211</onleft>
                <onright>9100</onright>
                <ondown>211</ondown>
                <scrolltime>0</scrolltime>
                <itemlayout width="600" height="69">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>100%</width>
                        <height>66</height>
                        <texture border="5" colordiffuse="Black12">common/box.png</texture>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <right>30</right>
                        <info>ListItem.Label</info>
                    </control>
                    <control type="image">
                        <right>0</right>
                        <top>0</top>
                        <width>66</width>
                        <height>66</height>
                        <texture colordiffuse="Black30">$INFO[ListItem.Icon]</texture>
                        <visible>String.Contains(ListItem.Icon,special://skin/extras/icons)</visible>
                        <visible>Skin.HasSetting(home.showicons) | String.Contains(Window.Property(groupname),x111)</visible>
                    </control>
                </itemlayout>
                <focusedlayout width="600" height="69">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>100%</width>
                        <height>66</height>
                        <texture border="5" colordiffuse="$VAR[ColorHighlight]">common/box.png</texture>
                        <!-- <visible>Control.HasFocus(211)</visible> -->
                    </control>
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>100%</width>
                        <height>66</height>
                        <texture border="5" colordiffuse="PanelBlack30">common/box.png</texture>
                        <!-- <visible>!Control.HasFocus(211)</visible> -->
                        <visible>false</visible>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <right>30</right>
                        <info>ListItem.Label</info>
                        <textcolor>Selected</textcolor>
                    </control>
                    <control type="image">
                        <right>0</right>
                        <top>0</top>
                        <width>66</width>
                        <height>66</height>
                        <texture colordiffuse="Black30">$INFO[ListItem.Icon]</texture>
                        <visible>String.Contains(ListItem.Icon,special://skin/extras/icons)</visible>
                        <visible>Skin.HasSetting(home.showicons) | String.Contains(Window.Property(groupname),x111)</visible>
                    </control>
                </focusedlayout>
            </control>

            <control type="grouplist" id="9200">
                <left>15</left>
                <top>91</top>
                <width>600</width>
                <align>right</align>
                <itemgap>-20</itemgap>
                <onright>9100</onright>
                <onup>Control.Move(211,-1)</onup>
                <ondown>Control.Move(211,1)</ondown>
                <orientation>horizontal</orientation>
                <animation effect="slide" end="-48" condition="Skin.HasSetting(home.showicons) | String.Contains(Window.Property(groupname),x111)">Conditional</animation>
                <animation effect="slide" end="0,69" condition="Integer.IsGreater(Container(211).Position,0)">Conditional</animation>
                <animation effect="slide" end="0,69" condition="Integer.IsGreater(Container(211).Position,1)">Conditional</animation>
                <animation effect="slide" end="0,69" condition="Integer.IsGreater(Container(211).Position,2)">Conditional</animation>
                <animation effect="slide" end="0,69" condition="Integer.IsGreater(Container(211).Position,3)">Conditional</animation>
                <animation effect="slide" end="0,69" condition="Integer.IsGreater(Container(211).Position,4)">Conditional</animation>
                <animation effect="slide" end="0,69" condition="Integer.IsGreater(Container(211).Position,5)">Conditional</animation>
                <animation effect="slide" end="0,69" condition="Integer.IsGreater(Container(211).Position,6)">Conditional</animation>
                <animation effect="slide" end="0,69" condition="Integer.IsGreater(Container(211).Position,7)">Conditional</animation>
                <animation effect="slide" end="0,69" condition="Integer.IsGreater(Container(211).Position,8)">Conditional</animation>
                <animation effect="slide" end="0,69" condition="Integer.IsGreater(Container(211).Position,9)">Conditional</animation>
                <animation effect="slide" end="0,69" condition="Integer.IsGreater(Container(211).Position,10)">Conditional</animation>
                <animation effect="slide" end="0,69" condition="Integer.IsGreater(Container(211).Position,11)">Conditional</animation>
                <control type="button" id="302" description="Delete">
                    <width>64</width>
                    <height>64</height>
                    <font>Null</font>
                    <texturenofocus colordiffuse="Black30">buttons/delete.png</texturenofocus>
                    <texturefocus colordiffuse="Selected">buttons/delete.png</texturefocus>
                </control>
                <control type="button" id="301" description="Add">
                    <width>64</width>
                    <height>64</height>
                    <font>Null</font>
                    <texturenofocus colordiffuse="Black30">buttons/add.png</texturenofocus>
                    <texturefocus colordiffuse="Selected">buttons/add.png</texturefocus>
                </control>
                <control type="button" id="303" description="Up">
                    <width>64</width>
                    <height>64</height>
                    <font>Null</font>
                    <texturenofocus colordiffuse="Black30">buttons/moveup.png</texturenofocus>
                    <texturefocus colordiffuse="Selected">buttons/moveup.png</texturefocus>
                </control>
                <control type="button" id="304" description="Down">
                    <width>64</width>
                    <height>64</height>
                    <font>Null</font>
                    <texturenofocus colordiffuse="Black30" flipy="true">buttons/moveup.png</texturenofocus>
                    <texturefocus colordiffuse="Selected" flipy="true">buttons/moveup.png</texturefocus>
                </control>
                
            </control>
            
            <!-- Right Buttons -->
            <control type="grouplist" id="9100">
                <onleft>304</onleft>
                <onright>303</onright>
                <onup>9100</onup>
                <ondown>9100</ondown>
                <right>15</right>
                <bottom>15</bottom>
                <width>820</width>
                <height>552</height>
                <orientation>vertical</orientation>
                <itemgap>3</itemgap>
                
                
                
                <control type="button" id="401" description="Alt chooser">
                    <width>100%</width>
                    <height>66</height>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <align>left</align>
                    <include>DefDialogButtons</include>
                </control>
                <control type="button" id="307" description="Custom">
                    <width>100%</width>
                    <height>66</height>
                    <label>31267</label>
                    <label2>$INFO[Container(211).ListItem.Property(Path)]</label2>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <align>left</align>
                    <include>DefDialogButtons</include>
                </control>
                <control type="button" id="305" description="Set Label">
                    <width>100%</width>
                    <height>66</height>
                    <label>31268</label>
                    <label2>$INFO[Container(211).ListItem.Label]</label2>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <align>left</align>
                    <include>DefDialogButtons</include>
                </control>
                
                <control type="button" id="312" description="Widget">
                    <width>100%</width>
                    <height>66</height>
                    <label>31266</label>
                    <label2>$VAR[LabelWidgetShortcutsName]</label2>
                    <visible>String.IsEqual(Window.Property(groupname),mainmenu)</visible>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <align>left</align>
                    <include>DefDialogButtons</include>
                    <visible>String.IsEqual(Window.Property(groupname),mainmenu)</visible>
                </control>
                <control type="button" id="9401" description="Widget Aspect">
                    <width>100%</width>
                    <height>66</height>
                    <label>$LOCALIZE[31261]</label>
                    <label2>$VAR[LabelWidgetType]</label2>
                    <visible>String.IsEqual(Window.Property(groupname),mainmenu)</visible>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <align>left</align>
                    <include>DefDialogButtons</include>
                    <onclick>SetProperty(customProperty,widgetaspect)</onclick>
                    <onclick condition="String.IsEmpty(Container(211).ListItem.Property(widgetaspect)) | String.IsEqual(Container(211).ListItem.Property(widgetaspect),Poster)">SetProperty(customValue,Square)</onclick>
                    <onclick condition="String.IsEqual(Container(211).ListItem.Property(widgetaspect),Square)">SetProperty(customValue,Fanart)</onclick>
                    <onclick condition="String.IsEqual(Container(211).ListItem.Property(widgetaspect),Fanart)">SetProperty(customValue,Thumbnail)</onclick>
                    <onclick condition="String.IsEqual(Container(211).ListItem.Property(widgetaspect),Thumbnail)">SetProperty(customValue,Poster)</onclick>
                    <onclick>SendClick(404)</onclick>
                </control>
                <control type="button" id="310" description="Background">
                    <width>100%</width>
                    <height>66</height>
                    <label>31110</label>
                    <label2>$INFO[Container(211).ListItem.Property(background)]</label2>
                    <visible>String.IsEqual(Window.Property(groupname),mainmenu)</visible>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <align>left</align>
                    <include>DefDialogButtons</include>
                </control>
                <control type="button" id="311" description="Browse for Thumb">
                    <width>100%</width>
                    <height>66</height>
                    <label>31181</label>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <align>left</align>
                    <include>DefDialogButtons</include>
                    <visible>String.Contains(Window.Property(groupname),x111) | Skin.HasSetting(home.showicons)</visible>
                </control>
                <control type="button" id="405" description="Set Submenu">
                    <width>100%</width>
                    <height>66</height>
                    <label>31112</label>
                    <visible>String.IsEqual(Window.Property(groupname),mainmenu)</visible>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <align>left</align>
                    <include>DefDialogButtons</include>
                    <visible>!String.IsEqual(Container(211).ListItem.Label2,MovieHub) + !String.IsEqual(Container(211).ListItem.Label2,TVHub)</visible>
                </control>
                <include content="Defs_Shortcuts_SetHub">
                    <param name="hubid" value="1111" />
                    <param name="buttonid1" value="9301" />
                    <param name="buttonid2" value="9501" />
                </include>
                <include content="Defs_Shortcuts_SetHub">
                    <param name="hubid" value="1112" />
                    <param name="buttonid1" value="9302" />
                    <param name="buttonid2" value="9502" />
                </include>
                <include content="Defs_Shortcuts_SetHub">
                    <param name="hubid" value="1113" />
                    <param name="buttonid1" value="9303" />
                    <param name="buttonid2" value="9503" />
                </include>
                <include content="Defs_Shortcuts_SetHub">
                    <param name="hubid" value="1114" />
                    <param name="buttonid1" value="9304" />
                    <param name="buttonid2" value="9504" />
                </include>
                <include content="Defs_Shortcuts_SetHub">
                    <param name="hubid" value="1115" />
                    <param name="buttonid1" value="9305" />
                    <param name="buttonid2" value="9505" />
                </include>
                <include content="Defs_Shortcuts_SetHub">
                    <param name="hubid" value="1116" />
                    <param name="buttonid1" value="9306" />
                    <param name="buttonid2" value="9506" />
                </include>
                <include content="Defs_Shortcuts_SetHub">
                    <param name="hubid" value="1117" />
                    <param name="buttonid1" value="9307" />
                    <param name="buttonid2" value="9507" />
                </include>
                <include content="Defs_Shortcuts_SetHub">
                    <param name="hubid" value="1118" />
                    <param name="buttonid1" value="9308" />
                    <param name="buttonid2" value="9508" />
                </include>
                <include content="Defs_Shortcuts_SetHub">
                    <param name="hubid" value="1119" />
                    <param name="buttonid1" value="9309" />
                    <param name="buttonid2" value="9509" />
                </include>
               
                <control type="button" id="308" description="Reset">
                    <width>100%</width>
                    <height>66</height>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <align>left</align>
                    <include>DefDialogButtons</include>
                </control>
            </control>
        
            
           
        </control>
        <control type="button" id="404"><visible allowhiddenfocus="true">false</visible></control>
    </controls>
</window>

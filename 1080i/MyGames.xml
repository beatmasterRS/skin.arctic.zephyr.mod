<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window>
    <defaultcontrol always="true">50</defaultcontrol>
    <menucontrol>9000</menucontrol>
    <views>500,550,50</views>
    <controls>
        <include>GlobalBackground</include>
        <include>View_550_List</include>
        <include>View_50_List</include>
        <include>View_500_Thumbnails</include>
        <include>Furniture_Header</include>
        <include>Furniture_NowPlaying</include>
        <include>Furniture_Clock</include>
        <include>Furniture_Weather</include>
        <include>Furniture_Flags</include>
        <control type="group">
            <include>Animation.FadeIn</include>
            <include>Animation.FadeOut</include>
            <visible>ControlGroup(9000).HasFocus()</visible>
            <include>GlobalOverlay</include>
        </control>
        <control type="group">
            <top>300</top>
            <height>410</height>
            <include>Def9000Background</include>
            <include content="Def9000Arrows"><param name="arrow_bottom" value="410" /></include>
            <control type="group">
                <left>22</left>
                <top>22</top>
                <control type="label">
                    <description>Header Label</description>
                    <left>70</left>
                    <width>1000</width>
                    <posy>0</posy>
                    <include>FontTop</include>
                    <textcolor>Dark2</textcolor>
                    <label>14018</label>
                </control>
                <include>Kodi_Logo</include>
                <!-- Lines -->
                <control type="image">
                    <top>70</top>
                    <left>17</left>
                    <width>385</width>
                    <height>1</height>
                    <bottom>10</bottom>
                    <colordiffuse>Black12</colordiffuse>
                    <texture>common/white.png</texture>
                </control>
            </control>
            <include content="Def_Gradient_Settings_Image">
                <param name="controlid" value="9000"/>
                <param name="left" value="8"/>
                <param name="top" value="110"/>
                <param name="width" value="450"/>
            </include>
            <control type="grouplist" id="9000">
                <top>110</top>
                <scrolltime>0</scrolltime>
                <height>490</height>
                <usecontrolcoords>true</usecontrolcoords>
                <include>Def9000GroupList</include>
                <control type="button" id="2">
                    <description>View</description>
                    <include>DefContextButtonGradient</include>
                    <align>left</align>
                </control>
                <control type="button" id="3">
                    <description>Sort</description>
                    <include>DefContextButtonGradient</include>
                    <align>left</align>
                </control>
                <control type="togglebutton" id="4">
                    <description>Ascending</description>
                    <include>DefContextButtonGradient</include>
                    <align>left</align>
                    <label>584</label>
                    <altlabel>585</altlabel>
                </control>
                <control type="edit" id="19">
                    <label>587</label>
                    <description>Filter (hidden)</description>
                    <include>DefContextButtonGradient</include>
                    <visible>!Container.CanFilterAdvanced</visible>
                </control>
                <control type="radiobutton" id="98">
                    <visible>Container.CanFilterAdvanced</visible>
                    <description>Filter</description>
                    <include>DefContextButtonGradient</include>
                    <label>587</label>
                    <align>left</align>
                    <onclick>SetFocus(50)</onclick>
                    <onclick>Filter</onclick>
                    <selected>Container.Filtered</selected>
                </control>
                <include content="MenuPlayerControls">
                    <param name="PlayerControlsOnUp" value="4"/>
                    <param name="PlayerControlsOnDown" value="1802"/>
                </include>
            </control>
        </control>
    </controls>

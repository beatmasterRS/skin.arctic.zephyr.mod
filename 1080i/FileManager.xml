                    <description>Header Label</description>
                    <top>5</top>
                    <left>30</left>
                    <right>30</right>
                    <align>left</align>
                    <font>TinyBold</font>
                    <textcolor>PanelWhite70</textcolor>
                </control>

                <control type="list" id="21">
                    <description>Left File List</description>
                    <left>15</left>
                    <bottom>15</bottom>
                    <right>15</right>
                    <height>552</height>
                    <onleft>20</onleft>
                    <onright>20</onright>
                    <onup>21</onup>
                    <ondown>21</ondown>

                    <itemlayout height="69" width="840">

                        

                        <control type="label">
                            <posx>30</posx>
                            <width>720</width>
                            <align>left</align>
                            <textcolor>PanelWhite70</textcolor>
                            <info>ListItem.Label</info>
                        </control>

                        <control type="label">
                            <right>30</right>
                            <width>150</width>
                            <align>right</align>
                            <font>Tiny</font>
                            <textcolor>PanelWhite70</textcolor>
                            <info>ListItem.Label2</info>
                        </control>

                    </itemlayout>

                    <focusedlayout height="69" width="840">

                        <control type="image">
                            <width>100%</width>
                            <height>66</height>
                            <texture border="5" colordiffuse="$VAR[ColorHighlight]">common/box.png</texture>
                            <animation effect="fade" start="100" end="50" condition="!Control.HasFocus(21)">Conditional</animation>
                        </control>

                        <control type="label">
                            <posx>30</posx>
                            <width>720</width>
                            <align>left</align>
                            <textcolor>Selected</textcolor>
                            <info>ListItem.Label</info>
                        </control>

                        <control type="label">
                            <right>30</right>
                            <width>720</width>
                            <align>right</align>
                            <textcolor>Selected</textcolor>
                            <font>Tiny</font>
                            <info>ListItem.Label2</info>
                        </control>

                    </focusedlayout>

                </control>

                <control type="label" id="22">
                    <description>Header Label</description>
                    <posx>23</posx>
                    <posy>882</posy>
                    <width>480</width>
                    <align>left</align>
                    <label>-</label>
                </control>

            </control>
            
        </control>
        
    </controls>

</window>

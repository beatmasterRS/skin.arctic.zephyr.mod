<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window>
    <defaultcontrol always="true" condition="!Skin.HasSetting(disable.startup.window)">9315</defaultcontrol>
    <onload>SetProperty(SkinInitStarted,1,home)</onload>
    <onload condition="!Skin.HasSetting(TMDbHelper.Service)">Skin.ToggleSetting(TMDbHelper.Service)</onload>
    <onload condition="!Skin.HasSetting(SkinHelper.EnableAnimatedPosters)">Skin.SetBool(SkinHelper.EnableAnimatedPosters)</onload>
    <onload condition="Skin.HasSetting(disable.startup.window)">ReplaceWindow($INFO[System.StartupWindow])</onload>
    <onload condition="!Skin.String(effect)">Skin.SetString(effect,blur)</onload>
    <onload condition="!Skin.String(quality)">Skin.SetString(quality,4)</onload>
    <onload condition="!Skin.String(blend)">Skin.SetString(blend,100)</onload>
    <onload condition="!Skin.String(blursize)">Skin.SetString(blursize,10)</onload>
    <onload condition="!Skin.String(bitsize)">Skin.SetString(bitsize,1)</onload>
    <onload condition="!Skin.String(pixelsize)">Skin.SetString(pixelsize,15)</onload>
    <onload condition="!Skin.String(desat)">Skin.SetString(desat,0.3)</onload>
    <onload condition="!Skin.String(black)">Skin.SetString(black,000000)</onload>
    <onload condition="!Skin.String(white)">Skin.SetString(white,ffffff)</onload>
    <onload condition="!Skin.String(main)">Skin.SetString(main,main:fhls*-;0.45;0.9)</onload>
    <onload condition="!Skin.String(comp)">Skin.SetString(comp,main:hls*0.75;0;0@fhls*-;0.45;0.9)</onload>
    <onload condition="Skin.HasSetting(blur.use.litebox) + System.AddonIsEnabled(script.litebox) + Skin.HasSetting(BlurEnabled)">RunScript(script.litebox,daemon=True)</onload>
    <onload condition="Skin.HasSetting(blur.use.litebox) + System.AddonIsEnabled(script.litebox) + Skin.HasSetting(BlurEnabled)">SetProperty(FIVE_daemon_set,$INFO[Skin.String(effect)],home)</onload>
    <onload condition="Skin.HasSetting(blur.use.litebox) + System.AddonIsEnabled(script.litebox) + Skin.HasSetting(BlurEnabled)">AlarmClock(nms1,SetProperty(NINE_manual_set,"var=main,set=$INFO[Skin.String(main)]|var=comp,set=$INFO[Skin.String(comp)]|var=quality,set=$INFO[Skin.String(quality)]|var=blursize,set=$INFO[Skin.String(blursize)]|var=bitsize,set=$INFO[Skin.String(bitsize)]|var=pixelsize,set=$INFO[Skin.String(pixelsize)]|var=black,set=$INFO[Skin.String(black)]|var=white,set=$INFO[Skin.String(white)]|var=blend,set=$INFO[Skin.String(blend)]|var=desat,set=$INFO[Skin.String(desat)]",home),00:05,true)</onload>
    <controls>
        <control type="group">
            <visible>!Skin.HasSetting(disable.startup.window)</visible>
            <control type="image" description="Background">
                <include>Dimensions_Fullscreen</include>
                <texture colordiffuse="$VAR[StartupDiffuse]">$VAR[StartupFanart]</texture>
                <animation effect="fade" start="100" end="0" time="500" tween="quadratic">WindowClose</animation>
                <visible>String.IsEmpty(Skin.String(StartupPlaylist))</visible>
            </control>
            <control type="button" id="9315">
                <visible allowhiddenfocus="true">false</visible>
                <onfocus condition="System.HasAddon(script.skin.info.service)">RunScript(script.skin.info.service)</onfocus>
                <onfocus condition="String.IsEmpty(Window(home).Property(SkinInitStarted)) + !String.IsEmpty(Skin.String(StartupPlaylist))">PlayMedia($ESCINFO[Skin.String(StartupPlaylist)])</onfocus>
                <onfocus condition="!Player.HasVideo + !String.IsEmpty(Skin.String(StartupPlaylist))">ReplaceWindow(Home)</onfocus>
                <onfocus condition="String.IsEmpty(Skin.String(StartupPlaylist)) + !Skin.HasSetting(disable.startup.window)">AlarmClock(GoHome,ReplaceWindow(home),00:03,silent,false)</onfocus>
            </control>
            <control type="label">
                <description>Loading</description>
                <width>100%</width>
                <height>100%</height>
                <align>center</align>
                <aligny>center</aligny>
                <label>Arctic [COLOR=$VAR[ColorHighlight]]Zephyr[/COLOR]</label>
                <font>EpisodeNumber</font>
                <textcolor>Dark1</textcolor>
                <animation effect="fade" start="100" end="0" time="500" tween="quadratic">WindowClose</animation>
                <visible>String.IsEmpty(Skin.String(StartupPlaylist)) + String.IsEmpty(Skin.String(startupfanart.fallback))</visible>
            </control>
            <control type="image">
                <left>1020</left>
                <top>605</top>
                <width>331</width>
                <height>60</height>
                <centertop>50%</centertop>
                <texture>backg/matrix.png</texture>
                <animation effect="fade" start="0" end="100" time="800" delay="1800" tween="quadratic">WindowOpen</animation>
                <animation effect="fade" start="100" end="0" time="500" tween="quadratic">WindowClose</animation>
                <visible>String.IsEmpty(Skin.String(StartupPlaylist)) + String.IsEmpty(Skin.String(startupfanart.fallback))</visible>
            </control>
        </control>
    </controls>
</window>

<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window>
    <defaultcontrol always="true">11</defaultcontrol>
    
    <controls>
    
        <control type="group">
            <visible>!Window.IsActive(DialogPVRGuideInfo.xml)</visible>
            <animation effect="slide" start="-668" end="0" time="150" tween="quadratic">Visible</animation>
            <animation effect="slide" start="-668" end="0" time="150" tween="quadratic">WindowOpen</animation>
            <animation effect="slide" end="-668" start="0" time="150" tween="quadratic">Hidden</animation>
            <animation effect="slide" end="-668" start="0" time="150" tween="quadratic">WindowClose</animation>
            <control type="image">
                <posx>-1</posx>
                <posy>-1</posy>
                <width>668</width>
                <height>1082</height>
                <colordiffuse>$VAR[OSDPanel]</colordiffuse>
                <texture border="5">common/white.png</texture>
                <animation effect="fade" start="100" end="90" condition="Skin.HasSetting(osd.usetheme)">Conditional</animation>
            </control>
            <control type="image">
                <posx>530</posx>
                <posy>-4</posy>  
                <width>128</width>
                <height>128</height>
                <texture>special://skin/extras/icons/livetv.png</texture>
                <colordiffuse>$VAR[OSDPanelWhite100]</colordiffuse>
            </control>
            <control type="label">
                <posx>33</posx>
                <posy>10</posy>
                <width>400</width>
                <align>left</align>
                <textcolor>$VAR[OSDPanelWhite100]</textcolor>
                <font>MediumBold</font>
                <label>$INFO[VideoPlayer.ChannelGroup]</label>
            </control>
            <control type="label">
                <posx>33</posx>
                <posy>43</posy>
                <width>400</width>
                <align>left</align>
                <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                <font>TinyBold</font>
                <label>$INFO[Container(11).NumItems,,  $LOCALIZE[19019]]</label>
            </control>

            <control type="list" id="11">
                <posx>0</posx>
                <posy>120</posy>
                <height>980</height>
                <width>667</width>
                <onleft>PreviousChannelGroup</onleft>
                <onright>NextChannelGroup</onright>
                <orientation>vertical</orientation>
                <itemlayout height="120">
                    <control type="image">
                        <width>667</width>
                        <height>109</height>
                        <texture>common/selected.png</texture>
                        <aspectratio aligny="top">center</aspectratio>
                        <animation effect="fade" start="100" end="15" condition="true">Conditional</animation>
                        <visible>ListItem.IsPlaying</visible>
                        <colordiffuse>$VAR[OSDPanelWhite100]</colordiffuse>
                    </control>
                    <control type="image">
                        <posx>22</posx>
                        <posy>12</posy>  
                        <width>85</width>
                        <height>85</height>
                        <texture>$INFO[ListItem.Thumb]</texture>
                        <aspectratio>keep</aspectratio>
                    </control>
                    <control type="label">
                        <posx>561</posx>
                        <posy>5</posy>
                        <width>70</width>
                        <align>left</align>
                        <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                        <font>SmallBold</font>
                        <label>$INFO[ListItem.ChannelNumberLabel]</label>
                        <selectedcolor>$VAR[OSDPanelWhite70]</selectedcolor>
                    </control>
                    <control type="progress">
                        <posx>561</posx>
                        <posy>65</posy>
                        <width>67</width>
                        <height>19</height>
                        <reveal>true</reveal>
                        <texturebg>pvr/progress-back.png</texturebg>
                        <lefttexture>pvr/progress-leftright.png</lefttexture>
                        <midtexture>pvr/progress-mid.png</midtexture>
                        <righttexture>pvr/progress-leftright.png</righttexture>
                        <info>ListItem.Progress</info>
                        <colordiffuse>$VAR[OSDPanelWhite70]</colordiffuse>
                    </control>
                    <control type="label">
                        <posx>130</posx>
                        <posy>5</posy>
                        <width>400</width>
                        <align>left</align>
                        <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                        <font>SmallBold</font>
                        <label>$INFO[ListItem.ChannelName]</label>
                        <selectedcolor>$VAR[OSDPanelWhite70]</selectedcolor>
                    </control>
                    <control type="label">
                        <posx>130</posx>
                        <posy>40</posy>
                        <width>400</width>
                        <align>left</align>
                        <font>Small</font>
                        <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                        <label>$INFO[ListItem.Title]</label>
                        <selectedcolor>$VAR[OSDPanelWhite70]</selectedcolor>
                    </control>
                </itemlayout>
                <focusedlayout height="120">
                    <control type="image">
                        <width>667</width>
                        <height>109</height>
                        <texture colordiffuse="$VAR[ColorHighlight]">common/white.png</texture>
                    </control>
                    <control type="image">
                        <width>667</width>
                        <height>109</height>
                        <texture>common/selected.png</texture>
                        <aspectratio aligny="top">center</aspectratio>
                        <animation effect="fade" start="100" end="30" condition="true">Conditional</animation>
                        <visible>ListItem.IsPlaying</visible>
                        <colordiffuse>Selected</colordiffuse>
                    </control>
                    <control type="image">
                        <posx>22</posx>
                        <posy>12</posy>  
                        <width>85</width>
                        <height>85</height>
                        <texture>$INFO[ListItem.Thumb]</texture>
                        <aspectratio>keep</aspectratio>
                    </control>
                    <control type="label">
                        <posx>561</posx>
                        <posy>5</posy>
                        <width>70</width>
                        <align>left</align>
                        <textcolor>Selected</textcolor>
                        <font>SmallBold</font>
                        <label>$INFO[ListItem.ChannelNumberLabel]</label>
                        <selectedcolor>Selected</selectedcolor>
                    </control>
                    <control type="progress">
                        <posx>561</posx>
                        <posy>65</posy>
                        <width>67</width>
                        <height>19</height>
                        <reveal>true</reveal>
                        <texturebg>pvr/progress-back.png</texturebg>
                        <lefttexture>pvr/progress-leftright.png</lefttexture>
                        <midtexture>pvr/progress-mid.png</midtexture>
                        <righttexture>pvr/progress-leftright.png</righttexture>
                        <info>ListItem.Progress</info>
                        <colordiffuse>Selected</colordiffuse>
                    </control>
                    <control type="label">
                        <posx>130</posx>
                        <posy>5</posy>
                        <width>400</width>
                        <align>left</align>
                        <textcolor>Selected</textcolor>
                        <font>SmallBold</font>
                        <label>$INFO[ListItem.ChannelName]</label>
                        <selectedcolor>Selected</selectedcolor>
                    </control>
                    <control type="label">
                        <posx>130</posx>
                        <posy>40</posy>
                        <width>400</width>
                        <align>left</align>
                        <font>Small</font>
                        <textcolor>Selected</textcolor>
                        <label>$INFO[ListItem.Title]</label>
                        <selectedcolor>Selected</selectedcolor>
                    </control>
                </focusedlayout>
            
            </control>
        </control>
    </controls>

</window>

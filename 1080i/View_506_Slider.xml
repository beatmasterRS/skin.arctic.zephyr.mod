<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>

    <include name="View_506_Slider">
        <control type="group">
            <include>Animation.Common</include>
            <visible>Control.IsVisible(506)</visible>
            <control type="group">
                <top>PosterPad</top>
                <left>SidePad</left>
                <right>SidePad</right>
                <height>640</height>
                <control type="image">
                    <left>-8</left>
                    <right>-8</right>
                    <top>-8</top>
                    <bottom>-8</bottom>
                    <texture border="15" colordiffuse="Panel">common/rounded-shadow8.png</texture>
                </control>                
                <control type="wraplist" id="506">
                    <oninfo condition="ListItem.IsCollection">ActivateWindow(1132)</oninfo>
                    <top>0</top>
                    <left>0</left>
                    <width>1760</width>
                    <right>0</right>
                    <top>0</top>
                    <bottom>0</bottom>
                    <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
                    <ondown>1641</ondown>
                    <focusposition>0</focusposition>
                    <onleft>51</onleft>
                    <onright>51</onright>
                    <preloaditems>0</preloaditems>
                    <pagecontrol>1641</pagecontrol>
                    <orientation>horizontal</orientation>
                    <include content="forced_view" condition="Skin.HasSetting(enable.forcedviews)">
                        <param name="string" value="Slider" />
                    </include>
                    <viewtype label="Slider">list</viewtype>
                    <scrolltime tween="quadratic">400</scrolltime>
                    <itemlayout height="640" width="1452">
                        <control type="image">
                            <top>0</top>
                            <right>-330</right>
                            <height>648</height>
                            <aspectratio scalediffuse="true">keep</aspectratio>
                            <texture background="true" diffuse="diffuse/lovefilmthumb.png">$VAR[FanartImage]</texture>
                        </control>
                    </itemlayout>
                    <focusedlayout height="640" width="1452">
                        <control type="image">
                            <top>0</top>
                            <right>-330</right>
                            <height>648</height>
                            <aspectratio scalediffuse="true">keep</aspectratio>
                            <texture background="true" diffuse="diffuse/lovefilmthumb.png">$VAR[FanartImage]</texture>
                        </control>
                    </focusedlayout>
                </control>
                <control type="image">
                    <left>0</left>
                    <right>0</right>
                    <bottom>0</bottom>
                    <height>70</height>
                    <texture border="15" colordiffuse="df000000">common/white.png</texture>
                </control>
                <control type="image">
                    <left>-1</left>
                    <top>-1</top>
                    <width>1762</width>
                    <height>642</height>
                    <texture colordiffuse="Box2" border="4" background="true">common/box21.png</texture>
                    <visible>!Skin.HasSetting(thumbnails.white)</visible>
                </control>
                <control type="group">
                    <left>30</left>
                    <right>100</right>
                    <top>560</top>
                    <bottom>30</bottom>
                    <orientation>horizontal</orientation>
                    <control type="label">
                        <top>10</top>
                        <aligny>center</aligny>
                        <height>64</height>
                        <font>Tiny</font>
                        <scroll>true</scroll>
                        <textcolor>PanelWhite70</textcolor>
                        <selectedcolor>PanelWhite70</selectedcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <top>10</top>
                        <align>right</align>
                        <height>64</height>
                        <font>Tiny</font>
                        <scroll>true</scroll>
                        <textcolor>PanelWhite70</textcolor>
                        <selectedcolor>PanelWhite70</selectedcolor>
                        <label>$INFO[ListItem.Size]</label>
                        <right>-60</right>
                    </control>
                </control>
            </control>
            <control type="scrollbar" id="1641">
                <onback>50</onback>
                <left>90</left>
                <width>1745</width>
                <bottom>210</bottom>
                <orientation>horizontal</orientation>
                <height>8</height>
                <onup>50</onup>
                <ondown>50</ondown>
                <texturesliderbackground border="4" colordiffuse="Dark4">scrollbar/scrollv.png</texturesliderbackground>
                <texturesliderbar border="4" colordiffuse="Dark2">scrollbar/scrollv.png</texturesliderbar>
                <texturesliderbarfocus border="4" colordiffuse="Dark1">scrollbar/scrollv.png</texturesliderbarfocus>
                <animation effect="fade" start="100" end="23" time="400" condition="!Control.HasFocus(1641) + !Container.Scrolling">Conditional</animation>
            </control>
        </control>
    </include>
</includes>
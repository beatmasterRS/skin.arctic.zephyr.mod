            <left>1</left>
            <top>1</top>
            <width>80</width>
            <height>119</height>
            <aspectratio scalediffuse="false">keep</aspectratio>
            <texture background="true">$INFO[ListItem.Icon]</texture>
            <visible>Skin.HasSetting(global.hidecirles)</visible>
            <visible>false</visible><!--default_false-->  
        </control>
        <control type="label">
            <left>130</left>
            <top>10</top>
            <right>40</right>
            <height>100</height>
            <aligny>center</aligny>
            <font>SmallNavi</font>
            <textcolor>Dark1</textcolor>
            <label>$INFO[ListItem.Label]</label>
            <animation effect="slide" start="0,0" end="-17,0" time="0" condition="Skin.HasSetting(global.hidecirles)">Conditional</animation>
        </control>
        <control type="label">
            <left>130</left>
            <top>10</top>
            <right>100</right>
            <align>right</align>
            <height>100</height>
            <aligny>center</aligny>
            <font>SmallNavi</font>
            <textcolor>Dark1</textcolor>
            <label>$INFO[ListItem.Label2]</label>
        </control>
        <control type="label">
            <align>right</align>
            <aligny>center</aligny>
            <top>27</top>
            <width>64</width>
            <centerright>75</centerright>
            <height>68</height>
            <textcolor>WatchedIconsList</textcolor>
            <selectedcolor>WatchedIconsList</selectedcolor>
            <font>SymbolList</font>
            <label>$VAR[WatchedLabelList]</label>
            <visible>!String.IsEqual(ListItem.Label,..)</visible>
        </control>

            <control type="panel" id="52">
                <oninfo condition="Container.Content(actors)">RunScript(script.embuary.info,call=person,query='"$INFO[ListItem.Label]"')</oninfo>
                <oninfo condition="ListItem.IsCollection">ActivateWindow(1132)</oninfo>
                <top>PosterPad</top>
                <left>SidePad</left>
                <width>1770</width>
                <height>650</height>
                <onleft condition="!Skin.HasSetting(global.kioskmode)">9000</onleft>
                <onright>1625</onright>
                <ondown>52</ondown>
                <onup>52</onup>
                <preloaditems>2</preloaditems>
                <pagecontrol>1625</pagecontrol>
                <orientation>vertical</orientation>
                <include content="forced_view" condition="Skin.HasSetting(enable.forcedviews)">
                    <param name="string" value="$LOCALIZE[37897]" />
                </include>
                <viewtype label="37897">list</viewtype>
                <scrolltime tween="quadratic">400</scrolltime>
                <itemlayout height="130" width="885">
                    <control type="image">
                        <left>1</left>
                        <top>1</top>
                        <right>9</right>
                        <height>120</height>
                        <texture border="5" diffuse="diffuse/pvrinfo.png" colordiffuse="Dark4">common/box.png</texture>
                    </control>
                    <include>View_52_BigList_ItemLayout</include>
                    <control type="image">
                        <left>0</left>
                        <right>9</right>
                        <top>0</top>
                        <bottom>9</bottom>
                        <texture border="4" colordiffuse="Box2">common/box21.png</texture>
                        <visible>!Skin.HasSetting(thumbnails.white)</visible>
                    </control>
                </itemlayout>
                <focusedlayout height="130" width="885">
                    <control type="image">
                        <left>1</left>
                        <top>1</top>
                        <right>9</right>
                        <height>120</height>
                        <texture border="5" diffuse="diffuse/pvrinfo.png" colordiffuse="Dark4">common/box.png</texture>
                    </control>
                    <include>View_52_BigList_FocusLayout</include>
                    <control type="image">
                        <left>0</left>
                        <right>9</right>
                        <top>0</top>
                        <bottom>9</bottom>
                        <texture border="4" colordiffuse="Box2">common/box21.png</texture>
                        <visible>!Skin.HasSetting(thumbnails.white)</visible>
                    </control>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="1625">
                <include content="scrollbar_vertical">
                    <param name="scrollid" value="1625"/>
                </include>
            </control>
        </control>
    </include>

    <include name="View_52_BigList_ItemLayout">
        <control type="image">
            <left>10</left>
            <top>10</top>
            <width>100</width>
            <height>100</height>
            <aspectratio scalediffuse="false">scale</aspectratio>
            <texture diffuse="common/circle2.png" background="true">$INFO[ListItem.Icon]</texture>
            <visible>!Skin.HasSetting(global.hidecirles)</visible>
        </control>
        <control type="image">
            <left>1</left>
            <top>1</top>
            <width>80</width>
            <height>119</height>
            <aspectratio scalediffuse="false">scale</aspectratio>

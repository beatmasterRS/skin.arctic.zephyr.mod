<?xml version="1.0" encoding="UTF-8"?>
<window>
    <menucontrol>9000</menucontrol>
    <background>0</background>
    <defaultcontrol always="true">10</defaultcontrol>
    <views>10</views>
    <controls>
        <include>GlobalBackground</include>
        <include>Furniture_Header</include>
        <include>Furniture_NowPlaying</include>
        <include>Furniture_Clock</include>
        <include>Furniture_Weather</include>
        <control type="group" id="50">
            <control type="group">
                <visible>Control.IsVisible(10)</visible>
                <include>Animation.Common</include>
                <left>SidePad</left>
                <right>SidePad</right>
                <top>PosterPad</top>
                <height>640</height>
                <control type="image">
                    <left>-8</left>
                    <right>-8</right>
                    <top>-8</top>
                    <bottom>-8</bottom>
                    <texture colordiffuse="Panel" border="16">common/rounded-shadow8.png</texture>
                </control>
                
                <control type="group">
                    <top>500</top>
                    <bottom>10</bottom>
                    <left>30</left>
                    <right>30</right>
                    <control type="label">
                        <top>5</top>
                        <right>280</right>
                        <aligny>center</aligny>
                        <height>64</height>
                        <font>SmallBold</font>
                        <textcolor>PanelWhite100</textcolor>
                        <selectedcolor>PanelWhite100</selectedcolor>
                        <label>[COLOR=$VAR[ColorHighlight]]$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,][/COLOR]$INFO[ListItem.Title,  ,]        [COLOR=$VAR[ColorHighlight]]$LOCALIZE[515][/COLOR]$INFO[ListItem.Genre,  ,]</label>
                    </control>
                    <control type="textbox">
                        <top>55</top>
                        <right>280</right>
                        <height>67</height>
                        <align>left</align>
                        <font>Tiny</font>
                        <textcolor>PanelWhite100</textcolor>
                        <selectedcolor>PanelWhite100</selectedcolor>
                        <label>$INFO[ListItem.Plot]</label>
                    </control>
                    <control type="image">
                        <right>-15</right>
                        <top>15</top>
                        <width>250</width>
                        <bottom>5</bottom>
                        <aspectratio align="right" aligny="center">keep</aspectratio>
                        <texture>$INFO[ListItem.Icon]</texture>
                    </control>
                </control>
                
                <control type="epggrid" id="10" description="EPG">     
                    <left>0</left>
                    <top>-60</top>
                    <width>1760</width>
                    <height>560</height>
                    <onleft>28</onleft>
                    <viewtype label="19069">list</viewtype>
                    <progresstexture border="5" colordiffuse="bf777777">pvr/progressline.png</progresstexture>
                    <scrolltime tween="quadratic">300</scrolltime>
                    <timeblocks>40</timeblocks>
                    <rulerunit>6</rulerunit>
                    <rulerlayout height="70" width="260">
                        <control type="label" id="2">
                            <posx>10</posx>
                            <posy>30</posy>
                            <width>200</width>
                            <align>left</align>
                            <aligny>top</aligny>
                            <font>EPGTimeline</font>
                            <label>$INFO[ListItem.Label]</label>
                            <textcolor>Dark2</textcolor>
                        </control>
                    </rulerlayout>
                    <channellayout height="70" width="460">
                        <control type="image">
                            <width>100%</width>
                            <height>100%</height>
                            <texture>common/selected.png</texture>
                            <aspectratio aligny="top">center</aspectratio>
                            <animation effect="fade" start="100" end="10" condition="true">Conditional</animation>
                            <visible>ListItem.IsPlaying</visible>
                        </control>
                        <control type="label">
                            <posx>90</posx>
                            <width>300</width>
                            <aligny>center</aligny>
                            <height>67</height>
                            <textcolor>PanelWhite100</textcolor>
                            <label>$INFO[ListItem.ChannelName]</label>
                        </control>
                        <control type="label">
                            <centerleft>45</centerleft>
                            <width>90</width>
                            <align>center</align>
                            <aligny>center</aligny>
                            <height>67</height>
                            <textcolor>PanelWhite100</textcolor>
                            <label>$INFO[ListItem.ChannelNumberLabel]</label>
                        </control>
                        <control type="image">
                            <top>10</top>
                            <bottom>10</bottom>
                            <right>10</right>
                            <width>50</width>
                            <texture>$INFO[ListItem.Icon]</texture>
                            <aspectratio aligny="center" align="right">keep</aspectratio>
                        </control>
                    </channellayout>
                    <focusedchannellayout height="70" width="460">
                        
                        <control type="image">
                            <width>100%</width>
                            <height>67</height>
                            <texture border="12" colordiffuse="$VAR[ColorHighlight]">common/white.png</texture>
                        </control>
                        <control type="image">
                            <width>100%</width>
                            <height>100%</height>
                            <texture>common/selected.png</texture>
                            <aspectratio aligny="top">center</aspectratio>
                            <animation effect="fade" start="100" end="20" condition="true">Conditional</animation>
                            <visible>ListItem.IsPlaying</visible>
                        </control>
                        <control type="label">
                            <posx>90</posx>
                            <width>300</width>
                            <aligny>center</aligny>
                            <height>67</height>
                            <selectedcolor>Selected</selectedcolor>
                            <textcolor>Selected</textcolor>
                            <label>$INFO[ListItem.ChannelName]</label>
                        </control>
                        <control type="label">
                            <centerleft>45</centerleft>
                            <width>90</width>
                            <align>center</align>
                            <aligny>center</aligny>
                            <selectedcolor>Selected</selectedcolor>
                            <height>67</height>
                            <textcolor>Selected</textcolor>
                            <label>$INFO[ListItem.ChannelNumberLabel]</label>
                        </control>
                        <control type="image">
                            <top>10</top>
                            <bottom>10</bottom>
                            <right>10</right>
                            <width>50</width>
                            <texture>$INFO[ListItem.Icon]</texture>
                            <aspectratio aligny="center" align="right">keep</aspectratio>
                        </control>
                    </focusedchannellayout>    
                    <itemlayout height="70" width="260">
                        
                        <control type="image" id="2">
                            <width>256</width>
                            <height>67</height>
                            <texture border="5">common/white.png</texture>
                            <colordiffuse>Black12</colordiffuse>
                        </control> 
                        <control type="image" id="2">
                            <width>257</width>
                            <height>67</height>
                            <texture>pvrgenre/$INFO[ListItem.Property(GenreType)].png</texture>
                            <aspectratio>scale</aspectratio>
                            <colordiffuse>5fffffff</colordiffuse>
                        </control> 
                        <control type="image">
                            <posy>6</posy>
                            <width>52</width>
                            <height>52</height>
                            <texture>special://skin/extras/icons/timer.png</texture>
                            <colordiffuse>PanelWhite70</colordiffuse>
                            <visible>ListItem.HasTimer | ListItem.IsRecording</visible>
                        </control>   
                        <control type="label" id="1">
                            <posx>0</posx>
                            <height>66</height>
                            <width>285</width>
                            <textoffsetx>50</textoffsetx>
                            <textcolor>PanelWhite70</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                            <visible>ListItem.HasTimer | ListItem.IsRecording</visible>
                        </control>
                        <control type="label" id="1">
                            <posx>15</posx>
                            <width>226</width>
                            <height>67</height>
                            <textcolor>PanelWhite70</textcolor>
                            <textoffsetx>0</textoffsetx>
                            <label>$INFO[ListItem.Label]</label>
                            <visible>!ListItem.HasTimer + !ListItem.IsRecording</visible>
                        </control>
                    </itemlayout>
                    <focusedlayout height="70" width="260">
        
                        <control type="image" id="2">
                            <width>256</width>
                            <height>67</height>
                            <texture border="5">common/white.png</texture>
                            <colordiffuse>$VAR[ColorHighlight]</colordiffuse>
                        </control> 
                        
                        <control type="image">
                            <posy>6</posy>
                            <width>52</width>
                            <height>52</height>
                            <texture>special://skin/extras/icons/timer.png</texture>
                            <colordiffuse>Selected</colordiffuse>
                            <visible>ListItem.HasTimer | ListItem.IsRecording</visible>
                        </control>   
                        <control type="label" id="1">
                            <posx>0</posx>
                            <height>66</height>
                            <width>285</width>
                            <textoffsetx>50</textoffsetx>
                            <textcolor>Selected</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                            <visible>ListItem.HasTimer | ListItem.IsRecording</visible>
                        </control>
                        <control type="label" id="1">
                            <posx>15</posx>
                            <width>226</width>
                            <height>67</height>
                            <textcolor>Selected</textcolor>
                            <textoffsetx>0</textoffsetx>
                            <label>$INFO[ListItem.Label]</label>
                            <visible>!ListItem.HasTimer + !ListItem.IsRecording</visible>
                        </control>
                    </focusedlayout>
                
                </control>
            </control>
        
        </control>
        <include>PVRSideBlade</include>
    </controls>
</window>

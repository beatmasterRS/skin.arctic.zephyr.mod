<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>

    <include name="View_500_Thumbnails">
        <control type="group">
            <include>Animation.Common</include>
            <visible>Control.IsVisible(500)</visible>
            <include>ViewSlideForJumpBar</include>
            <control type="group">
                <control type="panel" id="500">
                    <oninfo condition="Container.Content(actors)">RunScript(script.embuary.info,call=person,query='"$INFO[ListItem.Label]"')</oninfo>
                    <top>206</top>
                    <left>70</left>
                    <width>1800</width>
                    <height>680</height>
                    <onleft condition="!Skin.HasSetting(global.kioskmode)">9000</onleft>
                    <onright>1635</onright>
                    <onup>500</onup>
                    <ondown>500</ondown>
                    <preloaditems>0</preloaditems>
                    <pagecontrol>1635</pagecontrol>
                    <orientation>vertical</orientation>
                    <include content="forced_view" condition="Skin.HasSetting(enable.forcedviews)">
                        <param name="string" value="$LOCALIZE[21371]" />
                    </include>
                    <viewtype label="21371">list</viewtype>
                    <include>ScrolltimeViewsList</include>
                    <itemlayout height="340" width="299.33">
                        <control type="group">
                            <height>280</height>
                            <width>280</width>
                            <include content="include.widget.landscape">
                                <param name="id" value="500"/>
                                <param name="height" value="280"/>
                            </include>
                        </control>
                        <control type="label">
                            <left>15</left>
                            <right>30</right>
                            <bottom>20</bottom>
                            <height>50</height>
                            <align>center</align>
                            <font>Tiny</font>
                            <label>$INFO[ListItem.Label]</label>
                            <textcolor>Dark1</textcolor>
                            <selectedcolor>Dark1</selectedcolor>
                        </control>
                    </itemlayout>
                    <focusedlayout height="340" width="299.33">
                        <control type="group">
                            <height>280</height>
                            <width>280</width>
                            <include content="include.widget.landscape.focus">
                                <param name="id" value="500"/>
                                <param name="height" value="280"/>
                                <param name="glow_height" value="280" />
                                <param name="glow_top" value="0" />
                            </include>
                        </control>
                        <control type="label">
                            <left>15</left>
                            <right>30</right>
                            <bottom>20</bottom>
                            <height>50</height>
                            <align>center</align>
                            <font>Tiny</font>
                            <label>$INFO[ListItem.Label]</label>
                            <textcolor>Dark1</textcolor>
                            <selectedcolor>Dark1</selectedcolor>
                        </control>
                    </focusedlayout>
                </control>
            </control>
            <control type="scrollbar" id="1635">
                <include content="scrollbar_vertical">
                    <param name="scrollid" value="1635"/>
                </include>
            </control>
        </control>
    </include>
</includes>
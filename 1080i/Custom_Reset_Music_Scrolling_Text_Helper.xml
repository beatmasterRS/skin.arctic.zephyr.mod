<window id="1132" type="dialog">

    <!-- Visible Condition -->
    <visible>[Window.IsVisible(visualisation) | [Skin.HasSetting(home.extended.nowplaying.scrolling.text) + Player.HasAudio + Window.IsVisible(home)]] + ![Integer.IsGreater(MusicPlayer.Time,0) + !String.IsEqual(Player.TimeRemaining(hh:mm:ss),00:00:01)]</visible>
    
    <!-- Reset Textbox AutoScroll Position -->
    <onload>AlarmClock(SetValue,SetProperty(ResetScrollingText," ",home),00:01,silent)</onload>
    <onload>AlarmClock(ClearValue2,ClearProperty(ResetScrollingText,home),00:01,silent)</onload>

    <controls/>
</window>
<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1195">
    <visible>Skin.HasSetting(home.netflix.autoplay.trailer) + [String.IsEqual(Skin.String(NetflixTrailerDelay),3) + System.IdleTime(3) + !Player.HasMedia + !String.IsEmpty(Window(home).Property(listitem.trailer)) + !Window.IsVisible(DialogContextMenu.xml) + !Window.IsVisible(DialogVideoInfo.xml)]
    
    |
    
    [String.IsEqual(Skin.String(NetflixTrailerDelay),5) + System.IdleTime(5) + !Player.HasMedia + !String.IsEmpty(Window(home).Property(listitem.trailer)) + !Window.IsVisible(DialogContextMenu.xml) + !Window.IsVisible(DialogVideoInfo.xml)]
    
    |
    
    [String.IsEqual(Skin.String(NetflixTrailerDelay),7) + System.IdleTime(7) + !Player.HasMedia + !String.IsEmpty(Window(home).Property(listitem.trailer)) + !Window.IsVisible(DialogContextMenu.xml) + !Window.IsVisible(DialogVideoInfo.xml)]
    
    |
    
    [String.IsEqual(Skin.String(NetflixTrailerDelay),9) + System.IdleTime(9) + !Player.HasMedia + !String.IsEmpty(Window(home).Property(listitem.trailer)) + !Window.IsVisible(DialogContextMenu.xml) + !Window.IsVisible(DialogVideoInfo.xml)]</visible>
    
    
	<!-- Start Background Fade -->
    <onload condition="!String.IsEqual(Skin.String(TrailerPath),Window(home).Property(listitem.trailer)) + !String.IsEmpty(Window(home).Property(listitem.trailer))">SetProperty(TrailerFade,1,home)</onload>
    <onload condition="!String.IsEqual(Skin.String(TrailerPath),Window(home).Property(listitem.trailer)) + !String.IsEmpty(Window(home).Property(listitem.trailer))">Skin.SetString(TrailerFade,1)</onload>
    
    <!-- Set Trailer Path -->
    <onload condition="!String.IsEqual(Skin.String(TrailerPath),Window(home).Property(listitem.trailer)) + !String.IsEmpty(Window(home).Property(listitem.trailer))">Skin.SetString(TrailerPath,$INFO[ListItem.Trailer])</onload>
    <onload condition="!String.IsEqual(Skin.String(TrailerPath),Window(home).Property(listitem.trailer)) + !String.IsEmpty(Window(home).Property(listitem.trailer))">Skin.SetString(TrailerPath2,$INFO[ListItem.Trailer])</onload>
    
    <!-- Start Trailer -->
    <onload condition="!String.IsEqual(Skin.String(TrailerPath),Window(home).Property(listitem.trailer)) + !String.IsEmpty(Window(home).Property(listitem.trailer))">PlayMedia($INFO[Window(home).Property(listitem.trailer)],1)</onload>

	<controls/>
</window>

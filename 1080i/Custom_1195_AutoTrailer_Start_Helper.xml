<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1195">

    <!-- Delay -->
    <visible>Skin.HasSetting(home.netflix.autoplay.trailer) + !Control.HasFocus(300) + [String.IsEqual(Skin.String(NetflixTrailerDelay),3) + System.IdleTime(3) + !Player.HasMedia + !String.IsEmpty(Window(home).Property(listitem.trailer)) + !System.HasVisibleModalDialog + !Window.IsVisible(script-globalsearch.xml)]
    |
    [String.IsEqual(Skin.String(NetflixTrailerDelay),5) + System.IdleTime(5) + !Player.HasMedia + !String.IsEmpty(Window(home).Property(listitem.trailer)) + !System.HasVisibleModalDialog + !Window.IsVisible(script-globalsearch.xml)]
    |
    [String.IsEqual(Skin.String(NetflixTrailerDelay),7) + System.IdleTime(7) + !Player.HasMedia + !String.IsEmpty(Window(home).Property(listitem.trailer)) + !System.HasVisibleModalDialog + !Window.IsVisible(script-globalsearch.xml)]
    |
    [String.IsEqual(Skin.String(NetflixTrailerDelay),9) + System.IdleTime(9) + !Player.HasMedia + !String.IsEmpty(Window(home).Property(listitem.trailer)) + !System.HasVisibleModalDialog + !Window.IsVisible(script-globalsearch.xml)]</visible>
    
    <!-- Start Background Fade -->
    <onload condition="!String.IsEqual(Window(home).Property(TrailerPath),Window(home).Property(listitem.trailer)) + !String.IsEmpty(Window(home).Property(listitem.trailer)) + !System.HasVisibleModalDialog + !Window.IsVisible(script-globalsearch.xml)">SetProperty(TrailerFade,1,home)</onload>
    
    <!-- Set Trailer Path -->
    <onload condition="!String.IsEqual(Window(home).Property(TrailerPath),Window(home).Property(listitem.trailer)) + !String.IsEmpty(Window(home).Property(listitem.trailer)) + !System.HasVisibleModalDialog + !Window.IsVisible(script-globalsearch.xml)">SetProperty(TrailerPath,$INFO[ListItem.Trailer],home)</onload>
    <onload condition="!String.IsEqual(Window(home).Property(TrailerPath),Window(home).Property(listitem.trailer)) + !String.IsEmpty(Window(home).Property(listitem.trailer)) + !System.HasVisibleModalDialog + !Window.IsVisible(script-globalsearch.xml)">SetProperty(TrailerPath2,$INFO[ListItem.Trailer],home)</onload>
    
    <!-- Start Trailer -->
    <onload condition="!String.IsEqual(Window(home).Property(TrailerPath),Window(home).Property(listitem.trailer)) + !String.IsEmpty(Window(home).Property(listitem.trailer)) + !System.HasVisibleModalDialog + !Window.IsVisible(script-globalsearch.xml)">PlayMedia($INFO[ListItem.Trailer],1)</onload> 
    <controls />
</window>
<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="NextAiredGroup">
        <width>354</width>
    </include>

    <include name="NextAiredLabel">
        <left>0</left>
        <top>0</top>
        <right>10</right>
        <height>20</height>
        <aligny>center</aligny>
        <font>Tiny</font>
        <textcolor>Dark2</textcolor>
        <align>center</align>
    </include>

    <include name="NextAiredListGroupParam">
        <control type="group">
            <include>NextAiredGroup</include>
            <control type="label">
                <include>NextAiredLabel</include>
                <label>$INFO[Window(home).Property(NextAired.$PARAM[id].Weekday)]$INFO[Window(home).Property(NextAired.$PARAM[id].Date), - ,]</label>
            </control>
            <control type="list" id="$PARAM[id]">
                <top>40</top>
                <height>640</height>
                <width>442</width>
                <onleft>$PARAM[onleft]</onleft>
                <onright>$PARAM[onright]</onright>
                <orientation>vertical</orientation>
                <itemlayout height="200" width="354">
                    <include>NextAiredListItem</include>
                </itemlayout>
                <focusedlayout height="200" width="354">
                    <control type="group">
                        <visible>!Control.HasFocus($PARAM[id])</visible>
                        <include>NextAiredListItem</include>
                    </control>
                    <control type="group">
                        <visible>Control.HasFocus($PARAM[id])</visible>
                        <include>NextAiredListFocus</include>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </include>

    <include name="NextAiredListItem">
        <control type="image">
            <left>0</left>
            <right>10</right>
            <top>0</top>
            <bottom>10</bottom>
            <aspectratio>scale</aspectratio>
            <texture fallback="pvr/background.jpg">$VAR[NextAiredArt]</texture>
        </control>
        <control type="image">
            <left>0</left>
            <right>10</right>
            <height>48</height>
            <bottom>10</bottom>
            <texture colordiffuse="Black70">common/white.png</texture>
        </control>
        <control type="label">
            <left>20</left>
            <right>30</right>
            <height>48</height>
            <bottom>10</bottom>
            <align>left</align>
            <font>TinyBold</font>
            <textcolor>White100</textcolor>
            <label>$INFO[ListItem.Label]</label>
        </control>
        <control type="label">
            <left>20</left>
            <right>30</right>
            <height>48</height>
            <bottom>10</bottom>
            <align>right</align>
            <font>Mini</font>
            <textcolor>White100</textcolor>
            <label>$INFO[ListItem.Property(NextNumber)]</label>
        </control>
    </include>

    <include name="NextAiredListFocus">
        <control type="image">
            <left>0</left>
            <right>10</right>
            <top>0</top>
            <bottom>10</bottom>
            <aspectratio>scale</aspectratio>
            <texture fallback="pvr/background.jpg">$VAR[NextAiredArt]</texture>
        </control>
        <control type="image">
            <left>0</left>
            <right>10</right>
            <height>48</height>
            <bottom>10</bottom>
            <texture colordiffuse="$VAR[ColorHighlight]">common/white.png</texture>
        </control>
        <control type="label">
            <left>20</left>
            <right>30</right>
            <height>48</height>
            <bottom>10</bottom>
            <align>left</align>
            <font>TinyBold</font>
            <textcolor>Selected</textcolor>
            <label>$INFO[ListItem.Label]</label>
        </control>
        <control type="label">
            <left>20</left>
            <right>30</right>
            <height>48</height>
            <bottom>10</bottom>
            <align>right</align>
            <font>Mini</font>
            <textcolor>Selected</textcolor>
            <label>$INFO[ListItem.Property(NextNumber)]</label>
        </control>
    </include>

    <variable name="NextAiredArt">
        <value condition="!String.IsEmpty(ListItem.Property(Fanart))">$INFO[ListItem.Property(Fanart)]</value>
        <value>$INFO[ListItem.Thumb]</value>
    </variable>
</includes>

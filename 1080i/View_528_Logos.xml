<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>

	<variable name="LogoImage">
		<value condition="!String.IsEmpty(ListItem.Art(clearlogo))">$INFO[ListItem.Art(clearlogo)]</value>
		<value condition="!String.IsEmpty(ListItem.Art(landscape))">$INFO[ListItem.Art(landscape)]</value>
		<value condition="!String.IsEmpty(ListItem.Thumb)">$INFO[ListItem.Thumb]</value>
		<value condition="!String.IsEmpty(ListItem.Icon)">$INFO[ListItem.Icon]</value>
		<value condition="String.IsEqual(ListItem.Label,..)">DefaultFolderBack.png</value>
		<value>DefaultMovies.png</value>
	</variable>
    
    <include name="View_528_Logos">
        <description>Logos View (id=528)</description>
        <control type="group">
            <include>Animation.Common</include>
            <visible>Control.IsVisible(528)</visible>
            <control type="group">
                <include>LogosInfo</include>
            </control>
            <control type="group">
                <include>LogosContent</include>
            </control>
            <control type="scrollbar" id="1624">
                <include content="scrollbar_hor">
                    <param name="scrollid" value="1624"/>
                </include>
            </control>
        </control>
    </include>

    <include name="LogosContent">
        <include>ViewSlideForJumpBar</include>
        <bottom>110</bottom>
        <left>SidePad</left>
        <right>SidePad</right>
        <height>525</height>
        <control type="fixedlist" id="528">
            <visible>$EXP[InGameMode] | Container.Content(musicvideos) | Container.Content(artists) | Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes) | Container.Content(sets) | Container.Content(videos) | Container.Content(albums) | Container.Content(songs)</visible>
            <include content="forced_view" condition="Skin.HasSetting(enable.forcedviews)">
                <param name="string" value="$LOCALIZE[31705]" />
            </include>
            <bottom>50</bottom>
            <onup condition="!Skin.HasSetting(autoShowInfo528) | Integer.IsGreaterOrEqual(Skin.String(infoDelaySeconds528),1)">888</onup>
            <onup condition="!Skin.HasSetting(global.kioskmode) + [Skin.HasSetting(autoShowInfo528) + [String.IsEmpty(Skin.String(infoDelaySeconds528)) | String.IsEqual(Skin.String(infoDelaySeconds528),0)]]">9000</onup>
            <ondown>1624</ondown>
            <onleft>528</onleft>
            <onright>528</onright>
            <preloaditems>2</preloaditems>
            <pagecontrol>1624</pagecontrol>
            <focusposition>1</focusposition>
            <orientation>horizontal</orientation>
            <viewtype label="31705">list</viewtype>
            <include>ScrolltimeViewsList</include>
            <itemlayout height="450" width="570">
                <control type="group">
                    <animation effect="fade" start="0" end="30" time="0" reversible="false" condition="true">Conditional</animation>
					<control type="image" description="clearlogo">
                        <left>52</left>
                        <top>178</top>
                        <width>390</width>
                        <height>164</height>
                        <aspectratio scalediffuse="true" aligny="center" align="center">keep</aspectratio>
                        <texture background="true">$VAR[LogoImage]</texture>
                        <fadetime>ClearArtFadetime</fadetime>
                    </control>
                </control>
            </itemlayout>
            <focusedlayout height="450" width="570">
                <control type="group">
                    <animation effect="zoom" center="auto" start="100" end="140" time="480" tween="back" reversible="false">Focus</animation>
                    <animation effect="zoom" center="auto" start="140" end="100" time="160" tween="back" reversible="false">UnFocus</animation>
                    <control type="image" description="clearlogo">
                        <left>83</left>
                        <top>158</top>
                        <width>430</width>
                        <height>205</height>
                        <aspectratio scalediffuse="true" aligny="center" align="center">keep</aspectratio>
                        <texture background="true">$VAR[LogoImage]</texture>
                        <animation effect="fade" start="0" end="10" time="0" reversible="false" condition="true">Conditional</animation>
                    </control>
                    <control type="image" description="clearlogo">
                        <left>102</left>
                        <top>178</top>
                        <width>390</width>
                        <height>164</height>
                        <aspectratio scalediffuse="true" aligny="center" align="center">keep</aspectratio>
                        <texture background="true">$VAR[LogoImage]</texture>
                    </control>
                </control>
            </focusedlayout>
        </control>
    </include>

    <include name="LogosInfo">
        <control id="888" type="button">
            <!-- Info Animation Button -->
            <visible>Integer.IsGreater(Container.NumItems,0)</visible>
            <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
            <ondown>528</ondown>
            <onleft>528</onleft>
            <onright>528</onright>
            <include>HiddenButton</include>
        </control>
        <control id="889" type="button">
            <!-- Info Animation Trigger -->
            <visible>Control.HasFocus(888) | [Skin.HasSetting(autoShowInfo528) + [String.IsEmpty(Skin.String(infoDelaySeconds528)) | String.IsEqual(Skin.String(infoDelaySeconds528),0)]]</visible>
            <include>HiddenButton</include>
        </control>
        <control type="group" id="890">
            <top>180</top>
            <visible>Integer.IsGreater(Container.NumItems,0)</visible>
            <animation effect="slide" start="0,-640" time="800" condition="Control.IsVisible(889)">Conditional</animation>
            <animation effect="slide" end="0,-640" time="800" condition="!Control.IsVisible(889)">Conditional</animation>           
            <control type="image">
                <height>465</height>
                <top>-10</top>             
                <left>72</left>
                <right>72</right>
                <texture border="10">common/$VAR[nofocus-shadow10]</texture>
            </control>
            <control type="image">
                <height>450</height>                
                <left>SidePad</left>
                <right>SidePad</right>
                <texture colordiffuse="InfoBackground" diffuse="diffuse/pvrinfo.png" background="true" border="12">common/white.png</texture>
            </control>
            <control type="group">
                <include>LogosInfoImage</include>
            </control>
            <control type="group">
                <include>LogosTexts</include>
            </control>
        </control>    
    </include>

    <include name="LogosInfoImage">
        <control type="group">
            <left>1300</left>
            <right>SidePad</right>
            <top>40</top>
            <include condition="$EXP[InGameMode]">LogoInfoIcon</include>
            <include condition="!$EXP[InGameMode]">LogoInfoPoster</include>
        </control>
    </include>

    <include name="LogoInfoIcon">
        <control type="group">
            <left>120</left>
            <control type="image">
                <width>350</width>
                <height>350</height>
                <texture colordiffuse="Fallback" border="4" background="true">common/box.png</texture>
            </control>
            <control type="image">
                <width>350</width>
                <height>350</height>
                <fadetime>PosterFanartFadetime</fadetime>
                <aspectratio aligny="center" align="center" scalediffuse="false">scale</aspectratio>
                <texture diffuse="diffuse/listposter.png" background="true">$VAR[ThumbImage]</texture>
            </control>
            <control type="image">
                <width>350</width>
                <height>350</height>
                <texture border="4" colordiffuse="Box2" background="true">common/box21.png</texture>
                <visible>!Skin.HasSetting(thumbnails.white)</visible>
            </control>
        </control>
    </include>

    <include name="LogoInfoPoster">
        <control type="group">
            <left>150</left>
            <control type="image">
                <visible>!String.IsEqual(ListItem.Label,..)  + !String.IsEmpty(ListItem.Art(discart)) + Skin.HasSetting(discartfanart)</visible>
                <top>8</top>
                <width>245</width>
                <height>245</height>
                <fadetime>1000</fadetime>
                <texture>$INFO[ListItem.Art(discart)]</texture>
                <animation type="Conditional" condition="!Container(504).OnNext + !Container(504).OnPrevious" reversible="false">
                    <effect type="fade" start="0" end="100" time="50" delay="500"/>
                </animation>
                <animation type="Conditional" condition="!Container(504).OnNext + !Container(504).OnPrevious" reversible="false">
                    <effect type="slide" start="0,0" end="-124,0" time="500" delay="1000" tween="cubic"/>
                </animation>
                <animation type="Visible" reversible="false">
                    <effect type="fade" start="0" end="100" time="1500" tween="cubic"/>
                </animation>
                <animation type="Hidden" reversible="false">
                    <effect type="fade" start="100" end="0" time="500" tween="cubic"/>
                </animation>
            </control>
            <control type="image">
                <left>-9</left>
                <top>-9</top>
                <right>135</right>
                <bottom>490</bottom>
                <texture border="10">common/$VAR[nofocus-shadow10]</texture>
            </control>
            <control type="image">
                <width>243</width>
                <height>360</height>
                <texture colordiffuse="Fallback" border="4" background="true">common/box.png</texture>
            </control>
            <control type="image">
                <width>243</width>
                <height>360</height>
                <fadetime>PosterFanartFadetime</fadetime>
                <aspectratio aligny="center" align="center" scalediffuse="false">scale</aspectratio>
                <texture diffuse="diffuse/listposter.png" background="true">$VAR[PosterImage]</texture>
            </control>
            <control type="image">
                <width>243</width>
                <height>360</height>
                <texture border="4" colordiffuse="Box2" background="true">common/box21.png</texture>
                <visible>!Skin.HasSetting(thumbnails.white)</visible>
            </control>
        </control>
    </include>

    <include name="LogosTexts">
        <visible>!Skin.HasSetting(507.noscrolling)</visible>
        <left>109</left>
        <height>400</height>
        <width>1200</width>
        <control type="label">
            <top>14</top>
            <aligny>center</aligny>
            <height>64</height>
            <font>SmallBold</font>
            <textcolor>Dark1</textcolor>
            <selectedcolor>Dark1</selectedcolor>
            <label>$INFO[ListItem.Label]</label>
            <include condition="Skin.HasSetting(labels.autoscroll)">LabelScroll</include>
        </control>
        <control type="label">
            <top>56</top>
            <height>64</height>
            <aligny>center</aligny>
            <font>Small333</font>
            <textcolor>Dark1</textcolor>
            <selectedcolor>Dark1</selectedcolor>
            <label>$VAR[LabelGenre]</label>
        </control>
        <control type="textbox">
            <top>136</top>
            <bottom>17</bottom>
            <font>TinyPlot</font>
            <height>280</height>
            <textcolor>Dark2</textcolor>
            <selectedcolor>Dark2</selectedcolor>
            <label>$INFO[ListItem.Plot]</label>
            <align>justify</align>
            <autoscroll delay="3500" time="3500" repeat="2000">Control.IsVisible(889)</autoscroll>
        </control>
    </include>
</includes>
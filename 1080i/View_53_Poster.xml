<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>

    <include name="53Content">
        <!--<oninfo condition="ListItem.IsCollection">ActivateWindow(1132)</oninfo>-->
        <height>1080</height>
        <visible>String.Contains(Container.FolderPath,plugin://plugin.program.advanced.launcher/,left) | Container.Content(musicvideos) | Container.Content(movies) | Container.Content(tvshows) | Container.Content(sets) | Container.Content(seasons)</visible>
        <posy>96</posy>
        <posx>-190</posx>
        <width>2300</width>
        <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
        <ondown>1633</ondown>
        <onleft>53</onleft>
        <onright>53</onright>
        <focusposition>1</focusposition>
        <preloaditems>0</preloaditems>
        <pagecontrol>1633</pagecontrol>
        <orientation>horizontal</orientation>
        <include content="forced_view" condition="Skin.HasSetting(enable.forcedviews)">
            <param name="string" value="$LOCALIZE[37893]" />
        </include>
        <viewtype label="37893">list</viewtype>
        <include>ScrolltimeViewsList</include>
        <itemlayout width="270">
            <control type="group">
                <animation effect="Conditional" condition="true">
                    <effect type="zoom" end="60" time="0" center="213,452"/>
                </animation>
                <control type="image">
                    <centertop>PosterH</centertop>
                    <width>PosterW</width>
                    <height>48</height>
                    <aspectratio>stretch</aspectratio>
                    <texture>diffuse/shadowspot.png</texture>
                </control>
                <control type="image">
                    <left>-24</left>
                    <top>-12</top>
                    <bottom>0</bottom>
                    <width>PosterShadowW</width>
                    <height>PosterShadowH</height>
                    <texture border="32">common/$VAR[shadow-24]</texture>
                </control>
                <control type="image">
                    <top>10</top>
                    <left>0</left>
                    <width>PosterW</width>
                    <height>640</height>
                    <texture colordiffuse="Fallback" border="4" background="true">common/box.png</texture>
                </control>
                <control type="image">
                    <top>PosterH</top>
                    <width>PosterW</width>
                    <height>PosterH</height>
                    <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                    <texture flipy="true" diffuse="diffuse/listposter-ref.png" background="true">$VAR[PosterImage]</texture>
                    <visible>Skin.HasSetting(show.reflections)</visible>
                </control>
                <control type="image">
                    <top>10</top>
                    <width>PosterW</width>
                    <height>PosterH</height>
                    <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                    <texture diffuse="diffuse/listposter.png" background="true">$VAR[PosterImage]</texture>
                    <visible>true</visible><!--default_true-->
                </control>
                <control type="image">
                    <top>10</top>
                    <width>PosterW</width>
                    <height>PosterH</height>
                    <aspectratio align="center" aligny="center" scalediffuse="false">keep</aspectratio>
                    <texture diffuse="diffuse/listposter.png" background="true">$INFO[ListItem.Icon]</texture>
                    <visible>false</visible><!--default_false-->  
                </control>
                <control type="image">
                    <left>-2</left>
                    <top>9</top>
                    <right>-159</right>
                    <bottom>428</bottom>
                    <texture colordiffuse="Box2" border="4" background="true">common/box21.png</texture>
                    <visible>!Skin.HasSetting(thumbnails.white)</visible>
                </control>
                <control type="group">
                    <visible>!String.IsEqual(ListItem.Label,..)</visible>
                    <control type="label">
                        <top>10</top>
                        <left>375</left>
                        <align>center</align>
                        <aligny>center</aligny>
                        <width>50</width>
                        <right>7</right>
                        <top>6</top>
                        <height>50</height>
                        <textcolor>$VAR[WatchedBackingColor]</textcolor>
                        <font>SymbolPosterBackground</font>
                        <label>$VAR[WatchedBacking]</label>
                        <visible>!String.IsEqual(ListItem.Label,..)</visible>
                    </control>
                    <control type="label">
                        <top>10</top>
                        <left>375</left>
                        <align>center</align>
                        <aligny>center</aligny>
                        <width>50</width>
                        <right>7</right>
                        <top>6</top>
                        <height>50</height>
                        <textcolor>$VAR[WatchedLabelPosterColor]</textcolor>
                        <font>SymbolPoster</font>
                        <label>$VAR[WatchedLabelPoster]</label>
                        <visible>!String.IsEqual(ListItem.Label,..)</visible>
                    </control>
                </control>
            </control>
        </itemlayout>
        <focusedlayout width="300">
            <control type="group">
                <posy>120</posy>
                <animation condition="Container(53).OnNext | Container(53).OnPrevious" effect="zoom" start="60" end="100" delay="0" time="350" tween="sine" easing="out" center="213,276">Focus</animation>
                <animation condition="Container(53).OnNext | Container(53).OnPrevious" effect="zoom" start="100" end="60" delay="0" time="250" tween="sine" easing="out" center="213,282">UnFocus</animation>
                <control type="image">
                    <top>PosterH</top>
                    <width>PosterW</width>
                    <height>PosterH</height>
                    <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                    <texture flipy="true" diffuse="diffuse/listposter-ref.png" background="true">$VAR[PosterImage]</texture>
                    <visible>Skin.HasSetting(show.reflections)</visible>
                </control>
                <control type="image">
                    <centertop>PosterH</centertop>
                    <width>PosterW</width>
                    <height>48</height>
                    <aspectratio>stretch</aspectratio>
                    <texture>diffuse/shadowspot.png</texture>
                </control>
                <control type="image">
                    <left>-24</left>
                    <top>-24</top>
                    <width>PosterShadowW</width>
                    <height>PosterShadowH</height>
                    <texture border="32">common/$VAR[shadow-24]</texture>
                </control>
                <control type="image">
                    <top>0</top>
                    <left>0</left>
                    <width>PosterW</width>
                    <height>640</height>
                    <texture colordiffuse="Fallback" border="4" background="true">common/box.png</texture>
                </control>
                <control type="image">
                    <left>-1</left>
                    <top>-1</top>
                    <right>-129</right>
                    <bottom>319</bottom>
                    <texture colordiffuse="Box2" border="4" background="true">common/box21.png</texture>
                    <visible>!Skin.HasSetting(thumbnails.white)</visible>
                </control>
                <control type="image">
                    <visible>!ListItem.IsFolder + !String.IsEmpty(ListItem.Art(discart)) + Skin.HasSetting(discartfanart)</visible>
                    <posx>220</posx>
                    <posy>40</posy>
                    <width>424</width>
                    <height>424</height>
                    <texture>$INFO[ListItem.Art(discart)]</texture>
                    <aspectratio align="center" aligny="center">stretch</aspectratio>
                    <fadetime>1000</fadetime>
                    <animation type="Conditional" condition="!Container(53).OnNext + !Container(53).OnPrevious">
                       <effect type="fade" start="0" end="100" time="50" delay="1000"/>
                    </animation>
                    <animation type="Conditional" condition="!Container(53).OnNext + !Container(53).OnPrevious">
                       <effect type="slide" start="-220" end="0" time="1000" delay="2000" tween="cubic"/>
                    </animation>
                    <animation type="Visible" reversible="false">
                       <effect type="fade" start="0" end="100" time="1500" tween="cubic"/>
                    </animation>
                    <animation type="Hidden" reversible="false">
                       <effect type="fade" start="100" end="0" time="500" tween="cubic"/>
                    </animation>
                    <include>Animation.CDart</include>
                </control>
                <control type="image">
                    <width>PosterW</width>
                    <height>PosterH</height>
                    <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                    <texture diffuse="diffuse/listposter.png" background="true">$VAR[PosterImage]</texture>
                    <visible>true</visible><!--default_true-->
                </control>
                <control type="image">
                    <width>PosterW</width>
                    <height>PosterH</height>
                    <aspectratio align="center" aligny="center" scalediffuse="false">keep</aspectratio>
                    <texture diffuse="diffuse/listposter.png" background="true">$INFO[ListItem.Icon]</texture>
                    <visible>false</visible><!--default_false-->  
                </control>
                <control type="group">
                    <visible>!String.IsEqual(ListItem.Label,..)</visible>
                    <control type="label">
                        <top>0</top>
                        <left>375</left>
                        <align>center</align>
                        <aligny>center</aligny>
                        <width>50</width>
                        <right>7</right>
                        <top>6</top>
                        <height>50</height>
                        <textcolor>$VAR[WatchedBackingColor]</textcolor>
                        <font>SymbolPosterBackground</font>
                        <label>$VAR[WatchedBacking]</label>
                        <visible>!String.IsEqual(ListItem.Label,..)</visible>
                    </control>
                    <control type="label">
                        <top>0</top>
                        <left>375</left>
                        <align>center</align>
                        <aligny>center</aligny>
                        <width>50</width>
                        <right>7</right>
                        <top>6</top>
                        <height>50</height>
                        <textcolor>$VAR[WatchedLabelPosterColor]</textcolor>
                        <font>SymbolPoster</font>
                        <label>$VAR[WatchedLabelPoster]</label>
                        <visible>!String.IsEqual(ListItem.Label,..)</visible>
                    </control>
                </control>
            </control>
        </focusedlayout>
    </include>

    <include name="53Wrap">
        <include>ViewSlideForJumpBar</include>
        <control type="wraplist" id="53">
            <include>53Content</include>
        </control>
    </include>

    <include name="53Fixed">
        <include>ViewSlideForJumpBar</include>
        <control type="fixedlist" id="53">
            <include>53Content</include>
        </control>
    </include>

    <include name="View_53_Poster">
        <description>List View (id=53)</description>
        <control type="group">
            <include>Animation.Common</include>
            <visible>Control.IsVisible(53)</visible>
            <include condition="!Skin.HasSetting(53poster.nowrap)">53Wrap</include>
            <include condition="Skin.HasSetting(53poster.nowrap)">53Fixed</include>
            <control type="scrollbar" id="1633">
                <include content="scrollbar_hor">
                    <param name="scrollid" value="1633"/>
                </include>
            </control>
            <control type="grouplist">
                <left>540</left>
                <right>SidePad</right>
                <top>690</top>
                <orientation>vertical</orientation>
                <visible>![Container(53).OnNext | Container(53).OnPrevious]</visible>
                <animation effect="fade" start="0" end="100" delay="450" time="250" reversible="false">Visible</animation>
                <control type="label">
                    <font>SmallBold</font>
                    <label>$INFO[ListItem.Label]</label>
                    <textcolor>Dark1</textcolor>
                    <height>40</height>
                    <aligny>top</aligny>
                </control>
                <control type="label">
                    <font>Tiny</font>
                    <label>$VAR[LabelGenre]</label>
                    <textcolor>Dark1</textcolor>
                    <height>42</height>
                    <aligny>top</aligny>
                </control>
                <control type="textbox">
                    <font>Tiny</font>
                    <label>$VAR[LabelPlotBox]</label>
                    <textcolor>Dark2</textcolor>
                    <height>68</height>
                    <align>justify</align>
                </control>
            </control>
        </control>
    </include>
</includes>

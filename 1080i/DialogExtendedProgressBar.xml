<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <onload condition="Library.IsScanningVideo + Skin.HasSetting(UpdateArt.Enabled)">SetProperty(UpdateArt,1)</onload>
    <onunload condition="!String.IsEmpty(Window.Property(UpdateArt)) + Skin.HasSetting(UpdateArt.Enabled)">XBMC.RunScript(script.artwork.downloader,mode=custom,silent=true,landscape,clearlogo,clearart)</onunload>
    <onunload condition="!String.IsEmpty(Window.Property(UpdateArt)) + Skin.HasSetting(UpdateArt.Enabled)">ClearProperty(UpdateArt)</onunload>
    <controls>
        <control type="group">
            <right>72</right>
            <posy>70</posy>
            <width>660</width>
            <height>100</height>
            <include>Animation.FadeIn.Slide</include>
            <include>Animation.FadeOut</include>
            <visible>!Window.IsActive(DialogNotification.xml)</visible>
            <visible>!Window.IsVisible(fullscreenvideo)</visible>
            <visible>!Window.IsVisible(visualisation)</visible>
            <control type="image">
                <description>background image</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>660</width>
                <height>100</height>
                <animation effect="fade" start="100" end="90" condition="true">Conditional</animation>
                <texture border="16" colordiffuse="Background">common/rounded-shadow8.png</texture>
            </control>
			<control type="image">
				<left>6</left>
				<top>6</top>
				<right>6</right>
				<bottom>6</bottom>                         
				<texture colordiffuse="FF505050" background="true">common/box4.png</texture>   
				<visible>Skin.HasSetting(thumbnails.white)</visible>                        
			</control>

            <control type="group">

                <control type="group">
                    <left>20</left>
                    <centertop>50%</centertop>
                    <width>64</width>
                    <height>64</height>
                    <control type="image" description="Back">
                        <centerleft>50%</centerleft>
                        <centertop>50%</centertop>
                        <width>100</width>
                        <height>100</height>
                        <aspectratio align="center" aligny="center">keep</aspectratio>
                        <texture>dialog/loading-back-busy.png</texture>
                        <colordiffuse>Dark1</colordiffuse>
                        <animation effect="fade" start="0" end="100" time="150">VisibleChange</animation>
                    </control>
                    
                    <control type="image">
                        <centerleft>50%</centerleft>
                        <centertop>50%</centertop>
                        <width>100</width>
                        <height>100</height>
                        <texture>$INFO[Control.GetLabel(32),dialog/progress/p,.png]</texture>
                        <aspectratio align="center">keep</aspectratio>
                    </control>
                </control>

                <control type="label" id="30">
                    <left>104</left>
                    <top>22</top>
                    <height>24</height>
                    <aligny>center</aligny>
                    <font>TinyBold</font>
                    <textcolor>Dark1</textcolor>
                </control>
                <control type="label" id="31">
                    <left>104</left>
                    <bottom>22</bottom>
                    <height>24</height>
                    <aligny>center</aligny>
                    <font>Tiny</font>
                    <textcolor>Dark1</textcolor>
                </control>

            </control>
        </control>
       
        <control type="progress" id="32">
            <texturebg>-</texturebg>
            <lefttexture>-</lefttexture>
            <midtexture>-</midtexture>
            <righttexture>-</righttexture>
            <info>Player.Progress</info>
            <animation effect="fade" start="0" end="0" condition="true">Conditional</animation>
        </control>
    </controls>
</window>

<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">9090</defaultcontrol>

    <controls>
        <include>GlobalOverlay</include>
        <control type="group">
            <centerleft>50%</centerleft>
            <centertop>50%</centertop>
            <width>880</width>
            <height>470</height>

            <include>Animation.FadeIn</include>
            <include>Animation.FadeOut</include>
            
            <control type="image">
                <left>-8</left>
                <right>-8</right>
                <top>-8</top>
                <bottom>-8</bottom>
                <texture border="16" colordiffuse="White100">common/rounded-shadow8.png</texture>
            </control>

            <control type="panel" id="9090">
                <left>15</left>
                <top>15</top>
                <width>360</width>
                <height>440</height>
                <onleft>Close</onleft>
                <onright>9091</onright>
                <orientation>vertical</orientation>
                <scrolltime tween="quadratic" easing="out">200</scrolltime>
                <itemlayout height="110" width="120">
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <bottom>5</bottom>
                        <right>5</right>
                        <texture colordiffuse="Black12" border="5">common/box.png</texture>
                    </control>
                    <control type="label">
                        <left>5</left>
                        <top>20</top>
                        <bottom>5</bottom>
                        <right>5</right>
                        <align>center</align>
                        <font>Small</font>
                        <textcolor>Black70</textcolor>
                        <label>$INFO[ListItem.Label]$INFO[ListItem.Label2,[CR],]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="110" width="120">
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <bottom>5</bottom>
                        <right>5</right>
                        <texture colordiffuse="$VAR[ColorHighlight]" border="5">common/box.png</texture>
                    </control>
                    <control type="label">
                        <left>5</left>
                        <top>20</top>
                        <bottom>5</bottom>
                        <right>5</right>
                        <align>center</align>
                        <font>Small</font>
                        <textcolor>Selected</textcolor>
                        <label>$INFO[ListItem.Label]$INFO[ListItem.Label2,[CR],]</label>
                    </control>
                </focusedlayout>
            </control>
            <control type="panel" id="9091">
                <right>15</right>
                <top>15</top>
                <width>490</width>
                <height>440</height>
                <onleft>9090</onleft>
                <onright>Close</onright>
                <orientation>vertical</orientation>
                <scrolltime tween="quadratic" easing="out">200</scrolltime>
                <itemlayout height="55" width="490">
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <bottom>5</bottom>
                        <right>5</right>
                        <texture colordiffuse="Black12" border="5">common/box.png</texture>
                    </control>
                    <control type="label">
                        <centerleft>50%</centerleft>
                        <centertop>50%</centertop>
                        <width>95%</width>
                        <height>95%</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <font>Small</font>
                        <textcolor>Black70</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="55" width="490">
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <bottom>5</bottom>
                        <right>5</right>
                        <texture colordiffuse="$VAR[ColorHighlight]" border="5">common/box.png</texture>
                    </control>
                    <control type="label">
                        <centerleft>50%</centerleft>
                        <centertop>50%</centertop>
                        <width>95%</width>
                        <height>95%</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <font>Small</font>
                        <textcolor>Selected</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </focusedlayout>
            </control>
            <control type="label" id="600">
                <centerleft>50%</centerleft>
                <top>470</top>
                <width>100%</width>
                <height>50</height>
                <align>center</align>
                <textoffsetx>15</textoffsetx>
                <textcolor>white</textcolor>
                <scroll>true</scroll>
                <scrollspeed>20</scrollspeed>
            </control>

        </control>
    </controls>
</window>

<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window>
    <defaultcontrol always="true">11</defaultcontrol>
    <controls>
        <control type="group">
            <visible>!Window.IsActive(DialogPVRGuideInfo.xml)</visible>
            <animation effect="slide" start="-668" end="0" time="150" tween="quadratic">Visible</animation>
            <animation effect="slide" start="-668" end="0" time="150" tween="quadratic">WindowOpen</animation>
            <animation effect="slide" end="-668" start="0" time="150" tween="quadratic">Hidden</animation>
            <animation effect="slide" end="-668" start="0" time="150" tween="quadratic">WindowClose</animation>
            <control type="image">
                <posx>-1</posx>
                <posy>-1</posy>
                <width>668</width>
                <height>1082</height>
                <colordiffuse>$VAR[OSDPanel]</colordiffuse>
                <texture border="5">common/white.png</texture>
                <animation effect="fade" start="100" end="95" condition="Skin.HasSetting(osd.usetheme)">Conditional</animation>
            </control>
            <control type="image">
                <posx>530</posx>
                <posy>-4</posy>
                <width>128</width>
                <height>128</height>
                <texture>special://skin/extras/icons/livetv.png</texture>
                <colordiffuse>$VAR[OSDPanelWhite100]</colordiffuse>
                <visible>String.IsEmpty(Player.Art(thumb))</visible>
            </control>
            <control type="image">
                <posx>498</posx>
                <posy>28</posy>
                <width>128</width>
                <height>64</height>
                <aspectratio align="right">keep</aspectratio>
                <texture>$INFO[Player.Art(thumb)]</texture>
            </control>
            <control type="label">
                <posx>33</posx>
                <posy>10</posy>
                <width>400</width>
                <align>left</align>
                <textcolor>$VAR[OSDPanelWhite100]</textcolor>
                <font>Medium</font>
                <label>$INFO[VideoPlayer.ChannelName]</label>
            </control>
            <control type="label">
                <posx>33</posx>
                <posy>44</posy>
                <width>400</width>
                <align>left</align>
                <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                <font>Tiny</font>
                <label>$INFO[System.Time] - $INFO[System.Date]</label>
            </control>
            <control type="fixedlist" id="11">
                <posx>0</posx>
                <posy>120</posy>
                <height>980</height>
                <width>667</width>
                <focusposition>1</focusposition>
                <movement>6</movement>
                <orientation>vertical</orientation>
                <itemlayout height="120" width="667">
                    <control type="image">
                        <width>667</width>
                        <height>109</height>
                        <texture>common/selected.png</texture>
                        <aspectratio aligny="top">center</aspectratio>
                        <animation effect="fade" start="100" end="15" condition="true">Conditional</animation>
                        <visible>String.IsEqual(VideoPlayer.Title,ListItem.Title) + String.IsEqual(VideoPlayer.EndTime,ListItem.EndTime)</visible>
                        <colordiffuse>$VAR[OSDPanelWhite100]</colordiffuse>
                    </control>
                    <control type="label">
                        <left>33</left>
                        <right>22</right>
                        <posy>5</posy>
                        <align>left</align>
                        <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                        <selectedcolor>$VAR[OSDPanelWhite70]</selectedcolor>
                        <font>Small</font>
                        <label>$INFO[ListItem.Title]</label>
                    </control>
                    <control type="label">
                        <posy>40</posy>
                        <left>33</left>
                        <right>22</right>
                        <align>left</align>
                        <font>SmallPVR</font>
                        <textcolor>$VAR[OSDPanelWhite30]</textcolor>
                        <selectedcolor>$VAR[OSDPanelWhite30]</selectedcolor>
                        <label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
                    </control>
                    <control type="image">
                        <centertop>58</centertop>
                        <centerright>64</centerright>
                        <width>128</width>
                        <height>128</height>
                        <texture>special://skin/extras/icons/timer.png</texture>
                        <colordiffuse>$VAR[OSDPanelWhite100]</colordiffuse>
                        <visible>ListItem.HasTimer | ListItem.IsRecording</visible>
                        <aspectratio aligny="center" align="center">keep</aspectratio>
                    </control>
                </itemlayout>
                <focusedlayout height="120" width="667">
                    <control type="image">
                        <width>667</width>
                        <height>120</height>
                        <texture colordiffuse="$VAR[ColorSelectOtherBar]" border="5">common/white.png</texture>
                    </control>
                    <control type="image">
                        <width>667</width>
                        <height>120</height>
                        <texture border="5" colordiffuse="$VAR[ColorHighlightOtherBar]">common/gradient-box-wide.png</texture>
                    </control>
                    <control type="image">
                        <width>667</width>
                        <height>120</height>
                        <texture>common/selected.png</texture>
                        <aspectratio aligny="top">center</aspectratio>
                        <animation effect="fade" start="100" end="30" condition="true">Conditional</animation>
                        <visible>String.IsEqual(VideoPlayer.Title,ListItem.Title) + String.IsEqual(VideoPlayer.EndTime,ListItem.EndTime)</visible>
                    </control>
                    <control type="image">
                        <centertop>58</centertop>
                        <centerright>64</centerright>
                        <width>128</width>
                        <height>128</height>
                        <texture>special://skin/extras/icons/timer.png</texture>
                        <colordiffuse>Selected</colordiffuse>
                        <visible>ListItem.HasTimer | ListItem.IsRecording</visible>
                        <aspectratio aligny="center" align="center">keep</aspectratio>
                    </control>
                    <control type="label">
                        <left>33</left>
                        <right>22</right>
                        <posy>10</posy>
                        <align>left</align>
                        <textcolor>Selected</textcolor>
                        <Selectedcolor>Selected</Selectedcolor>
                        <font>Small</font>
                        <label>$INFO[ListItem.Title]</label>
                    </control>
                    <control type="label">
                        <posy>45</posy>
                        <left>33</left>
                        <right>22</right>
                        <align>left</align>
                        <font>SmallPVR</font>
                        <textcolor>Selected</textcolor>
                        <Selectedcolor>Selected</Selectedcolor>
                        <label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </controls>
</window>
